<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"></script>
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/colors.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/navbar-secondary.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/form-select.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/buttons.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/modal.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/font.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/email.css" asp-append-version="true" />
    <link rel="stylesheet" href="/zerix_fe_dev.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/overlayscrollbars/css/OverlayScrollbars.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/overlayscrollbars/js/OverlayScrollbars.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/vanillajs-datepicker@1.3.4/dist/css/datepicker.min.css">

    <script src="~/js/forms.js"></script>
</head>

<body>
    <header>
        <nav
            class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mobile-navbar-height">
            <div class="container px-4">
                <a class="navbar-brand" asp-area="" asp-page="/">
                    <img src="/images/new-zerix-logo.png" alt="Logo" class="d-inline-block align-top logo-responsive" />
                </a>
                <div class="d-flex justify-content-end align-items-center" id="navbarNavDropdown">
                    <ul class="navbar-nav me-3">
                        <!-- Dropdown for desktop view User-->
                        <li class="nav-item dropdown d-none d-sm-block"> <!-- Only visible on desktop -->
                            <a class="fs-5 nav-link text-dark d-flex align-items-center" href="#"
                                id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                <span class="ff-default txt-color-tertiary me-2 fs-18 fw-400">Welcome, </span><span
                                    class="fs-18 fw-500 txt-color-primary me-2">@ViewData["User"]</span>
                                <img src="/images/icons/arrow-down.svg" height="12" width="12" alt="arrow-down"
                                    class="d-inline-block" />
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-lg ud-shadow bg-body-tertiary rounded border-0"
                                aria-labelledby="navbarDropdownMenuLink">
                                <li>
                                    <a class="dropdown-item fs-14 ff-default font-darkgray d-flex align-items-center my-2"
                                        href="/accounts/switch-organization">
                                        <img src="/images/icons/switch.svg" alt="Switch Icon" class="me-2" width="16"
                                            height="16" />
                                        Switch Company
                                    </a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider divider-color mx-3">
                                </li>
                                <li>
                                    <a class="dropdown-item fs-14 ff-default font-red d-flex align-items-center my-2"
                                        href="/accounts/login">
                                        <img src="/images/icons/logout.svg" alt="Logout Icon" class="me-2" width="16"
                                            height="16" />
                                        Log out
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Offcanvas trigger for mobile view User-->
                        <li class="nav-item dropdown d-block d-sm-none position-relative">
                            <a class="fs-5 nav-link pb-0 pt-1 text-dark d-flex align-middle align-items-center" href="#"
                                id="navbarDropdownMobileLink" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                <span class="ff-default txt-color-tertiary me-2 fs-14 fw-400">Welcome, </span>
                                <span class="fs-14 fw-400 txt-color-primary username-truncate">@ViewData["User"]</span>
                                <img src="~/images/icons/arrow-down.svg" height="12" width="12" alt="arrow-down"
                                    class="d-inline-block" />
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end position-absolute ud-shadow bg-body-tertiary rounded border-0"
                                aria-labelledby="navbarDropdownMobileLink">
                                <li>
                                    <a class="dropdown-item fs-14 ff-default font-darkgray d-flex align-items-center py-1"
                                        href="/accounts/switch-organization">
                                        <img src="~/images/icons/switch.svg" alt="Switch Icon" class="me-2" width="16"
                                            height="16" />
                                        Switch Company
                                    </a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider mx-3">
                                </li>
                                <li>
                                    <a class="dropdown-item fs-14 ff-default font-red d-flex align-items-center py-1"
                                        href="/accounts/login">
                                        <img src="~/images/icons/logout.svg" alt="Logout Icon" class="me-2" width="16"
                                            height="16" />
                                        Logout
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link btn-orange-fill d-flex align-items-center px-2 px-md-3" href="/">
                                <img src="/images/icons/dashboard.svg" alt="Logo" class="me-md-2" />
                                <span
                                    class="ff-default fs-18 fw-400 txt-color-primary-alt d-none d-md-inline">Dashboard</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>

    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>