                    <option value="2">Author 2</option>
                    <option value="3">Author 3</option>
                    <option value="4">Author 4</option>
                    <option value="5">Author 5</option>
                    <option value="6">Author 6</option>
                    <option value="7">Author 7</option>
                    <option value="8">Author 8</option>
                    <option value="9">Author 9</option>
                </select>
            </form>
        </div>
    </div>

    <div class="container px-0 pb-2 pb-md-0 notification-wall scroll">
        @foreach (var notification in Model.Notifications)
        {
            <div class="card notifications bg-color-fff mb-3 notification-item" data-notification-id="@notification.Id">
                <div class="card-body rounded @(notification.Priority == "urgent" ? "card-with-indicator" : "") p-4 bg-color-fff">
                    @if (notification.Priority == "urgent")
                    {
                        <div class="triangle-indicator"></div>
                        @if (!string.IsNullOrEmpty(notification.IconPath))
                        {
                            <img src="@notification.IconPath" height="24" width="24" alt="urgent" class="icon-indicator" style="color: #FF5400;" />
                        }
                    }
                    
                    <!-- Collapsed view (title only) -->
                    <div class="notification-collapsed">
                        <div class="row justify-content-between align-items-start">
                            <!-- Desktop view -->
                            <div class="col-12 col-lg-8 d-none d-lg-block">
                                <div class="card-titles fs-16 font-orange notification-title-clickable" style="cursor: pointer;">
                                    @notification.Title
                                </div>
                            </div>
                            <div class="col-12 col-lg-4 d-none d-lg-flex flex-column align-items-end">
                                <div class="d-flex flex-row align-items-center mb-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 512 512"
                                        class="color-495057 me-1">
                                        <rect width="416" height="384" x="48" y="80" fill="none" stroke="currentColor"
                                            stroke-linejoin="round" stroke-width="32" rx="48" />
                                        <circle cx="296" cy="232" r="24" fill="currentColor" />
                                        <circle cx="376" cy="232" r="24" fill="currentColor" />
                                        <circle cx="296" cy="312" r="24" fill="currentColor" />
                                        <circle cx="376" cy="312" r="24" fill="currentColor" />
                                        <circle cx="136" cy="312" r="24" fill="currentColor" />
                                        <circle cx="216" cy="312" r="24" fill="currentColor" />
                                        <circle cx="136" cy="392" r="24" fill="currentColor" />
                                        <circle cx="216" cy="392" r="24" fill="currentColor" />
                                        <circle cx="296" cy="392" r="24" fill="currentColor" />
                                        <path fill="none" stroke="currentColor" stroke-linecap="round"
                                            stroke-linejoin="round" stroke-width="32" d="M128 48v32m256-32v32" />
                                        <path fill="none" stroke="currentColor" stroke-linejoin="round" stroke-width="32"
                                            d="M464 160H48" />
                                    </svg>
                                    <span class="text-muted">@notification.Date.ToString("MMMM dd, yyyy")</span>
                                </div>
                                <div class="text-muted text-end mb-2">
                                    <span class="text-muted">Author: </span>
                                    <strong class="font-orange">@notification.Author</strong>
                                </div>
                                <button class="btn btn-outline-warning border-orange text-orange fs-14 d-flex align-items-center px-3 py-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash me-1" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
                                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
                                    </svg>
                                    <span>Delete</span>
                                </button>
                            </div>
                            
                            <!-- Mobile view - title with meta below and delete button on right -->
                            <div class="col-12 d-lg-none mobile-notification-row">
                                <div class="mobile-left-section">
                                    <div class="card-titles fs-16 font-orange notification-title-clickable" style="cursor: pointer;">
                                        @notification.Title
                                    </div>
                                    <div class="mobile-meta-row d-flex justify-content-between align-items-start mt-2">
                                        <div class="mobile-meta-info">
                                            <div class="d-flex flex-row align-items-center mb-1">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 512 512"
                                                    class="color-495057 me-1">
                                                    <rect width="416" height="384" x="48" y="80" fill="none" stroke="currentColor"
                                                        stroke-linejoin="round" stroke-width="32" rx="48" />
                                                    <circle cx="296" cy="232" r="24" fill="currentColor" />
                                                    <circle cx="376" cy="232" r="24" fill="currentColor" />
                                                    <circle cx="296" cy="312" r="24" fill="currentColor" />
                                                    <circle cx="376" cy="312" r="24" fill="currentColor" />
                                                    <circle cx="136" cy="312" r="24" fill="currentColor" />
                                                    <circle cx="216" cy="312" r="24" fill="currentColor" />
                                                    <circle cx="136" cy="392" r="24" fill="currentColor" />
