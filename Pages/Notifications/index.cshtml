<script>
    OverlayScrollbars(document.querySelectorAll('.scroll'), {
        scrollbars: {
            visibility: 'visible',
        },
        overflowBehavior: {
            y: "scroll",
            x: "scroll"
        },
    });

    // Notification expand/collapse functionality
    document.addEventListener('DOMContentLoaded', function() {
        const notificationTitles = document.querySelectorAll('.notification-title-clickable');
        
        notificationTitles.forEach(function(title) {
            title.addEventListener('click', function() {
                const notificationItem = this.closest('.notification-item');
                const collapsedView = notificationItem.querySelector('.notification-collapsed');
                const expandedView = notificationItem.querySelector('.notification-expanded');
                
                if (expandedView.style.display === 'none' || expandedView.style.display === '') {
                    // Expand the notification
                    collapsedView.style.display = 'none';
                    expandedView.style.display = 'block';
                } else {
                    // Collapse the notification
                    collapsedView.style.display = 'block';
                    expandedView.style.display = 'none';
                }
            });
        });
    });
</script>