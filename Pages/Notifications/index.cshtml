                                                    <path fill="none" stroke="currentColor" stroke-linejoin="round" stroke-width="32"
                                                        d="M464 160H48" />
                                                </svg>
                                                <span class="text-muted fs-12">@notification.Date.ToString("MMMM dd, yyyy")</span>
                                            </div>
                                            <div class="text-muted mb-2">
                                                <span class="text-muted fs-12">Author: </span>
                                                <strong class="font-orange fs-12">@notification.Author</strong>
                                            </div>
                                        </div>
