@page
@model SwitchOrgModel
@{
    Layout = "_Account";
    ViewData["Title"] = "Change Organization";
}

<div class="container">
    <div class="justify-content-center align-items-center px-1">
        <!-- Login Form Section -->
        <div class="d-flex flex-column justify-content-start align-items-center ">
            <div
                class="d-flex justify-content-md-center justify-content-center align-items-start mt-4 mb-2 py-4 my-md-4 w-100 align-self-center">
                <img src="/images/new-zerix-logo.png" alt="ZerixText" class="logo-img">
            </div>
            <div class="mb-4 d-flex flex-column align-items-center w-100 align-self-center">
                <div class="text-center welcome-text mb-1 fs-24">Select Organization</div>
                <div class="text-center sub-text mb-3 color-878A99 fs-15">Please select the organization/company with
                    which you are affiliated with.
                </div>
            </div>
            <div class="justify-content-center change-org mt-4 mt-md-0">
                <div class="dropdown-search w-100">
                    <div class="input-group mb-2 d-flex flex-row flex-nowrap">
                        <input type="text" class="change-org form-control fs-15 ff-default"
                            placeholder="Search Organization/Company" id="searchInput">
                        <button class="btn btn-show-password" type="button" id="showListButton">
                            <img src="/images/icons/arrow-down-black.svg" height="12" width="12" alt="arrow-down"
                                class="d-inline-block" id="arrowIcon" />
                        </button>
                    </div>
                    <ul class="list-group d-none" id="searchResults">
                        <!-- Dynamic search results will be added here -->
                    </ul>
                </div>

                <!-- Continue Button -->
                <button type="button"
                    class="btn btn-continue bg-color-ff5400 color-fff mt-3 w-100 py-2 ff-default fs-15">Continue</button>
            </div>
        </div>
    </div>
</div>

<div class="logout-overlay-container">
    <div>
        <a href="/accounts/login"
            class="d-flex flex-row justify-content-center align-items-center fs-16 text-decoration-none color-D40000">
            <img src="/images/icons/logout.svg" alt="Logout Icon" class="me-1" width="16" height="16" />
            Log out
        </a>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const searchInput = document.getElementById('searchInput');
        const searchResults = document.getElementById('searchResults');
        const showListButton = document.getElementById('showListButton');
        const arrowIcon = document.getElementById('arrowIcon');

        // Sample data for search
        const companies = ['Company 1', 'Company 2', 'Company 3', 'Company 4'];

        // Show the list when clicking the button
        showListButton.addEventListener('click', function () {
            // Toggle the visibility of the search results
            searchResults.classList.toggle('d-none');

            // Change the icon source based on the current visibility state
            if (searchResults.classList.contains('d-none')) {
                arrowIcon.src = "/images/icons/arrow-down-black.svg";
                arrowIcon.alt = "arrow-down";
            } else {
                arrowIcon.src = "/images/icons/arrow-up-black.svg";
                arrowIcon.alt = "arrow-up";
                populateResults(companies); // Show all companies on button click
            }
        });

        // Show the list when typing in the input
        searchInput.addEventListener('input', function () {
            const query = searchInput.value.toLowerCase();
            searchResults.innerHTML = ''; // Clear previous results

            // Filter results based on search query
            const filteredCompanies = companies.filter(company => company.toLowerCase().includes(query));

            populateResults(filteredCompanies);

            // Show the results if there's input or hide if empty
            if (query.length > 0) {
                searchResults.classList.remove('d-none');
                arrowIcon.src = "/images/icons/arrow-up-black.svg";
                arrowIcon.alt = "arrow-up";
            } else {
                searchResults.classList.add('d-none');
                arrowIcon.src = "/images/icons/arrow-down-black.svg";
                arrowIcon.alt = "arrow-down";
            }
        });

        // Function to populate the results
        function populateResults(companiesList) {
            searchResults.innerHTML = ''; // Clear existing results
            if (companiesList.length > 0) {
                companiesList.forEach(company => {
                    const listItem = document.createElement('li');
                    listItem.classList.add('list-group-item', 'fs-15');
                    listItem.textContent = company;
                    listItem.addEventListener('click', function () {
                        // Set the selected item to the input field
                        searchInput.value = company;
                        // Hide the search results after selecting
                        searchResults.classList.add('d-none');
                        // Reset the arrow icon
                        arrowIcon.src = "/images/icons/arrow-down-black.svg";
                        arrowIcon.alt = "arrow-down";
                    });
                    searchResults.appendChild(listItem);
                });
            } else {
                const listItem = document.createElement('li');
                listItem.classList.add('list-group-item', 'fs-14');
                listItem.textContent = 'No results found';
                searchResults.appendChild(listItem);
            }
        }
    });
</script>
