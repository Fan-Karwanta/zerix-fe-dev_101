@page
@model LoginModel
@{
Layout = "_Account";
ViewData["Title"] = "Login";
ViewData["User"] = "Admin";
}

<div class="container-fluid px-0">
    <div class="min-vh-100 d-flex flex-row justify-content-between align-items-center">
        <!-- Login Form Section -->
        <div class="login-section d-flex flex-column d-lg-flex justify-content-start align-items-center">
            <div class="d-flex justify-content-md-start justify-content-center login-contents width my-4 py-4">
                <img src="/images/zerix-logo.png" alt="ZerixText" class="logo-img">
            </div>
            <div
                class="d-flex flex-column justify-content-start justify-content-md-start align-items-start login-contents width h-100 gap-4">
                <div class="mb-2 mb-md-4 d-flex flex-column align-items-start login-contents width">
                    <div class="text-center welcome-text mb-1 fs-24">Welcome Back!</div>
                    <div class="text-center sub-text mb-3 color-878A99">Protecting your account with a secure login.
                    </div>
                </div>
                <form class="login-contents width d-flex flex-column justify-content-start h-50">
                    <div class="mb-4">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control fs-14" id="username">
                    </div>
                    <div class="mb-4">
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control password fs-14" id="password">
                                <button class="btn btn-show-password" type="button" id="togglePassword"
                                    onclick="togglePasswordVisibility('togglePassword', 'password')">
                                    <i class="bi bi-eye color-878A99"></i>
                                </button>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="rememberMe">
                                <label class="form-check-label color-495057" for="rememberMe">
                                    Remember me
                                </label>
                            </div>
                            <a href="/accounts/forgot-password" class="forgot-password color-878A99">Forgot your
                                password?</a>
                        </div>
                    </div>
                    <button type="submit" class=" align-self-end w-100 bg-color-ff5400 log-in-btn py-2 fs-16">Log
                        In</button>
                </form>
                <div class="align-self-center mt-auto mb-4 pb-4 my-md-4 py-md-4">
                    <div class="color-878A99 fs-15">Don’t have an account?
                        <a href="/accounts/sign-up" class="sign-up font-orange text-decoration-none">Sign
                            Up</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mobile Mockup Section -->
        <div class="mobile-mockup-section d-none d-lg-flex justify-content-center align-items-center">
        </div>
    </div>
</div>