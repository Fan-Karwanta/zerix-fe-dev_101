        '11:30 am',
        '12:20 pm',
        '1:10 pm',
        '2:00 pm',
        '2:50 pm',
        '3:40 pm',
        '4:30 pm',
        '5:20 pm',
        '6:10 pm',
        '7:00 pm',
        '7:50 pm',
        '8:40 pm',
        '9:30 pm',
    ];
    
    // Create time slot elements for each time
    timeSlots.forEach(timeString => {
        const timeSlot = document.createElement('div');
        timeSlot.className = 'time-slot';
        timeSlot.innerHTML = `
            <div class="time-slot-content">
                <div class="time-text">${timeString}</div>
