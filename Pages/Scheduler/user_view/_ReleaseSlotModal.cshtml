<!-- Release Slot Confirmation Modal -->
<div class="modal fade" id="releaseSlotModal" tabindex="-1" aria-labelledby="releaseSlotModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content release-slot-modal-content">
            <div class="position-relative-wrapper">
                <button type="button" class="btn-close release-slot-close-btn" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="release-slot-close-icon">Ã—</span>
                </button>
            </div>
            <div class="modal-body release-slot-modal-body">
                <h3 class="modal-title release-slot-title" id="releaseSlotModalLabel">Release Slot(s)?</h3>
                <p class="release-slot-text">Your reserved slots will be released. Do you want to continue?</p>
                
                <!-- Desktop buttons (side by side) -->
                <div class="d-none d-md-flex justify-content-between gap-3">
                    <button type="button" class="btn release-slot-btn" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn release-slot-confirm-btn" id="confirmReleaseBtn">Continue</button>
                </div>
                
                <!-- Mobile buttons (stacked) -->
                <div class="d-md-none">
                    <button type="button" class="btn w-100 mb-3 release-slot-btn" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn w-100 release-slot-confirm-btn" id="confirmReleaseBtnMobile">Continue</button>
                </div>
            </div>
        </div>
    </div>
</div>
