<!-- Appointment; Details View -->
<div id="appointment-details" class="appointment-details-view" style="display: none;">
    <!-- Desktop Header -->
    <div class="d-none d-md-flex align-items-center mb-4 position-relative">
        <button class="btn btn-link p-0 back-link text-decoration-none" onclick="showServiceCategorySelectionDirect()">
           <i class="bi bi-chevron-left"></i>
            <span class="text-orange fs-14">Back</span>
        </button>
        <h2 class="fs-32 ff-default font-darkgray fw-400 position-absolute start-50 translate-middle-x scheduler-title-desktop">Select Appointment</h2>
    </div>

    <!-- Mobile Header -->
    <div class="d-md-none">
        <div class="d-flex align-items-center justify-content-center mb-3 position-relative mobile-header-container">
            <button class="btn btn-link p-0 back-link text-decoration-none position-absolute start-0" onclick="showServiceCategorySelectionDirect()">
                <i class="bi bi-chevron-left"></i>
            </button>
            <h2 class="fs-24 ff-default font-darkgray fw-400 mb-0">Select Appointment</h2>
        </div>
        
    </div>
    
    <div class="appointment-details-list">
        <!-- Hot Oil Appointment -->
        <!-- Desktop Layout -->
        <div class="appointment-item d-none d-md-flex justify-content-between align-items-center p-4 mb-4 border rounded">
            <div class="text-start">
               <div class="fs-18 text-black fw-bold appointment-info-item" id="selected-appointment-name">Hot Oil</div>
                <p class="mb-1 text-muted fs-14">Reservation Fee: ₱30.00</p>
                <p class="mb-0 text-muted fs-14">50 minutes &#64; ₱45.00</p>
            </div>
            <button class="btn btn-fill px-4 py-2" data-appointment="Hot Oil" data-fee="₱30.00" data-duration="50 minutes &#64; ₱45.00" onclick="selectAppointmentDetails(this)">
                Book
            </button>
        </div>
        <!-- Mobile Layout -->
        <div class="appointment-item d-md-none p-4 mb-4 border rounded">
            <div class="text-start mb-3">
                <div class="fs-18 text-black fw-bold appointment-info-item" id="selected-appointment-name">Hot Oil</div>
                <p class="mb-1 text-muted fs-14">Reservation Fee: ₱30.00</p>
                <p class="mb-0 text-muted fs-14">50 minutes &#64; ₱45.00</p>
            </div> 
            <div class="d-flex justify-content-center">
                <button class="btn btn-fill px-5 py-2 appointment-btn" data-appointment="Hot Oil" data-fee="₱30.00" data-duration="50 minutes &#64; ₱45.00" onclick="selectAppointmentDetails(this)">
                    Book
                </button>
            </div>
        </div>
        
        <!-- Hair Rebond Appointment -->
        <!-- Desktop Layout -->
        <div class="appointment-item d-none d-md-flex justify-content-between align-items-center p-4 mb-4 border rounded">
            <div class="text-start">
                <div class="fs-18 text-black fw-bold appointment-info-item" id="selected-appointment-name2">Hair Rebond</div>
                <p class="mb-0 text-muted fs-14">1 hour/s</p>
            </div>
            <button class="btn btn-fill px-4 py-2" data-appointment="Hair Rebond" data-fee="" data-duration="1 hour/s" onclick="selectAppointmentDetails(this)">
                Book
            </button>
        </div>
        <!-- Mobile Layout -->
        <div class="appointment-item d-md-none p-4 mb-4 border rounded">
            <div class="text-start mb-3">
                 <div class="fs-18 text-black fw-bold appointment-info-item" id="selected-appointment-name2">Hair Rebond</div>
                <p class="mb-0 text-muted fs-14">1 hour/s</p>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-fill px-5 py-2 appointment-btn" data-appointment="Hair Rebond" data-fee="" data-duration="1 hour/s" onclick="selectAppointmentDetails(this)">
                    Book
                </button>
            </div>
        </div>
    </div>
</div>
