@page
@model zerix_fe_dev.Pages.Scheduler.ConfirmedModel
@{
    Layout = "_Scheduler";
    ViewData["Title"] = "Appointment Confirmed";
    ViewData["User"] = "Admin";
}

@await Html.PartialAsync("_Navigation")

@await Html.PartialAsync("_MobileSidebar")

<div class="container px-4 my-3 pt-md-5 pt-3">
    <div class="row">
        <div class="col-12">
            <!-- Back Button -->
            <a href="/Scheduler" class="text-decoration-none mb-4 d-inline-block" style="color: #FF5400;">
                <i class="bi bi-chevron-left" style="color: #FF5400;"></i>
                <span class="fs-14" style="color: #FF5400;">Schedule another appointment</span>
            </a>

            <!-- Confirmation Card -->
            <div class="text-center mb-5 mt-5">
                <!-- Success Icon -->
                <div class="mb-4">
                    <div class="rounded-circle bg-dark d-inline-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                        <svg width="60" height="60" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M5 13L9 17L19 7" stroke="white" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                </div>

                <!-- Title -->
                <h2 class="fw-bold mb-3" style="font-size: 28px; color: #212529;">Appointment Confirmed!</h2>
                
                <!-- Subtitle -->
                <p class="mb-0" style="color: #878a99; font-size: 16px;">Your appointment has been confirmed. See you soon!</p>
            </div>
        </div>
    </div>
    
    <!-- First Appointment Card -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card shadow-sm" style="border-radius: 8px;">
                <div class="card-body-confirm p-4">
                    <div class="row align-items-center">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <h5 class="fw-bold mb-3" style="font-size: 20px; color: #212529;">Eyebrow Thread</h5>
                            <p class="mb-2" style="color: #878a99; font-size: 14px;">SM Megamall- Face</p>
                            <p class="mb-2" style="color: #878a99; font-size: 14px;">March 4, 2025 (Tuesday)</p>
                            <p class="mb-0" style="color: #878a99; font-size: 14px;">9:00 - 9:50 AM GMT+8</p>
                        </div>
                        <div class="col-md-6 d-flex flex-column flex-md-row justify-content-md-end gap-2">
                            <button type="button" class="btn px-4 py-2" style="min-width: 130px; border-radius: 6px; font-size: 14px; color: #FF5400; border: 1px solid #FF5400; background-color: white;">Cancel</button>
                            <button type="button" class="btn px-4 py-2" style="min-width: 130px; border-radius: 6px; font-size: 14px; color: #FF5400; border: 1px solid #FF5400; background-color: white;">Reschedule</button>
                            <button type="button" class="btn px-4 py-2" style="min-width: 130px; border-radius: 6px; font-size: 14px; color: #FF5400; border: 1px solid #FF5400; background-color: white;">Edit Info</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Second Appointment Card -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card shadow-sm" style="border-radius: 8px;">
                <div class="card-body-confirm p-4">
                    <div class="row align-items-center">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <h5 class="fw-bold mb-3" style="font-size: 20px; color: #212529;">Eyelash Lift</h5>
                            <p class="mb-2" style="color: #878a99; font-size: 14px;">SM Megamall- Face</p>
                            <p class="mb-2" style="color: #878a99; font-size: 14px;">March 4, 2025 (Tuesday)</p>
                            <p class="mb-0" style="color: #878a99; font-size: 14px;">9:00 - 9:50 AM GMT+8</p>
                        </div>
                        <div class="col-md-6 d-flex flex-column flex-md-row justify-content-md-end gap-2">
                            <button type="button" class="btn px-4 py-2" style="min-width: 130px; border-radius: 6px; font-size: 14px; color: #FF5400; border: 1px solid #FF5400; background-color: white;">Cancel</button>
                            <button type="button" class="btn px-4 py-2" style="min-width: 130px; border-radius: 6px; font-size: 14px; color: #FF5400; border: 1px solid #FF5400; background-color: white;">Reschedule</button>
                            <button type="button" class="btn px-4 py-2" style="min-width: 130px; border-radius: 6px; font-size: 14px; color: #FF5400; border: 1px solid #FF5400; background-color: white;">Edit Info</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>