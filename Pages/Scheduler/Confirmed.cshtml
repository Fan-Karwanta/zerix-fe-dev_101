@page
@model ConfirmedModel
@{
    Layout = "_Scheduler";
    ViewData["Title"] = "Appointment Confirmed";
    ViewData["User"] = "Admin";
}

@await Html.PartialAsync("_Navigation")

@await Html.PartialAsync("_MobileSidebar")

<div class="container px-4 my-3 pt-md-5 pt-3">
    <div class="row">
        <div class="col-12">
            <!-- Back Button -->
        <button class="btn btn-link p-0 back-link text-decoration-none" onclick="window.location.href='/Scheduler'">
           <i class="bi bi-chevron-left"></i>
            <span class="text-orange fs-14">Back</span>
        </button>

            <!-- Confirmation Card -->
            <div class="text-center mb-5">
                <!-- Success Icon -->
                <div class="mb-4">
                    <div class="rounded-circle bg-dark d-inline-flex align-items-center justify-content-center confirmed-success-icon">
                        <svg width="88" height="88" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M9 12L11 14L15 10" stroke="white" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                </div>

                <!-- Title -->
                <h2 class="fw-bold mb-2 confirmed-title">Appointment Confirmed!</h2>
                
                <!-- Subtitle -->
                <p class="text-muted">Your appointment has been confirmed. See you soon!</p>
            </div>
        </div>
    </div>
    
    <!-- First Appointment Card -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border appointment-card">
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-8 mb-3 mb-md-0">
                            <h5 class="fw-bold mb-2">Eyebrow Thread</h5>
                            <p class="mb-1 text-muted">SM Megamall- Face</p>
                            <p class="mb-1 text-muted">March 4, 2025 (Tuesday)</p>
                            <p class="mb-0 text-muted">9:00 - 9:50 AM GMT+8</p>
                        </div>
                        <div class="col-md-4 d-flex flex-column flex-md-row justify-content-md-end gap-2">
                            <button type="button" class="btn btn-outline-primary cancel-btn">Cancel</button>
                            <button type="button" class="btn btn-outline-primary reschedule-btn">Reschedule</button>
                            <button type="button" class="btn btn-outline-primary edit-btn">Edit Info</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Second Appointment Card -->
    <div class="row">
        <div class="col-12">
            <div class="card border appointment-card">
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-8 mb-3 mb-md-0">
                            <h5 class="fw-bold mb-2">Eyelash Lift</h5>
                            <p class="mb-1 text-muted">SM Megamall- Face</p>
                            <p class="mb-1 text-muted">March 4, 2025 (Tuesday)</p>
                            <p class="mb-0 text-muted">9:00 - 9:50 AM GMT+8</p>
                        </div>
                        <div class="col-md-4 d-flex flex-column flex-md-row justify-content-md-end gap-2">
                            <button type="button" class="btn btn-outline-primary cancel-btn">Cancel</button>
                            <button type="button" class="btn btn-outline-primary reschedule-btn">Reschedule</button>
                            <button type="button" class="btn btn-outline-primary edit-btn">Edit Info</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
