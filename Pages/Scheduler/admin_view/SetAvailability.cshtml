<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Tab switching functionality for availability page
        const availabilityTabs = document.querySelectorAll('.availability-tab');
        const availabilityTabContents = document.querySelectorAll('.tab-content-availability');
        
        availabilityTabs.forEach(tab => {
            tab.addEventListener('click', function() {
                // Remove active class from all tabs and contents
                availabilityTabs.forEach(t => t.classList.remove('active'));
                availabilityTabContents.forEach(content => content.classList.remove('active'));
                
                // Add active class to clicked tab
                this.classList.add('active');
                
                // Show corresponding content
                const tabName = this.getAttribute('data-tab');
                const content = document.getElementById(tabName + '-content');
                if (content) {
                    content.classList.add('active');
                }
            });
        });
    });
</script>
