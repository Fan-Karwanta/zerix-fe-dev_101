@page
@model zerix_fe_dev.Pages.Scheduler.admin_view.AppointmentTypesModel
@{
    Layout = "_Scheduler";
    ViewData["Title"] = "Appointment Types";
    ViewData["User"] = "Admin";
}

@await Html.PartialAsync("../_Styles")

@await Html.PartialAsync("../admin_view/_Styles")

@await Html.PartialAsync("../user_view/_Navigation")

@await Html.PartialAsync("../user_view/_MobileSidebar")

<!-- Mobile Overview Dropdown - Show on phones and tablets, hide on desktop -->
<div class="container px-4 d-lg-none">
    <div class="mobile-overview-section">
        <div class="d-flex justify-content-between align-items-center gap-2">
            <button class="btn mobile-overview-toggle" type="button" data-bs-toggle="collapse" data-bs-target="#mobileOverviewMenu" aria-expanded="false" aria-controls="mobileOverviewMenu">
                <span>Overview</span>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="dropdown-arrow">
                    <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </button>
        </div>
        <div class="collapse" id="mobileOverviewMenu">
            <div class="mobile-sidebar-nav">
                <a href="/scheduler/admin_view/calendar" class="mobile-sidebar-nav-item">Calendar</a>
                <a href="/scheduler/admin_view/appointmenttypes" class="mobile-sidebar-nav-item active">Appointment Types</a>
                <a href="/scheduler/admin_view/categories" class="mobile-sidebar-nav-item">Categories</a>
                <a href="/scheduler/admin_view/formquestions" class="mobile-sidebar-nav-item">Form Questions</a>
                <a href="/scheduler/admin_view/merchantprofile" class="mobile-sidebar-nav-item">Merchant Profile</a>
                <a href="/scheduler/admin_view/reports" class="mobile-sidebar-nav-item">Reports</a>
            </div>
        </div>
    </div>
</div>

<div class="container px-4 my-3 pt-md-3 pt-3">
    <div class="row g-4">
        <!-- Left Sidebar: Mini Calendar and Navigation - Show on desktop only (hide on tablets) -->
        <div class="col-12 col-md-3 d-none d-lg-block">
            <!-- Mini Calendar -->
            <div class="mini-calendar-container">
                <div class="mini-calendar-header">
                    <button class="btn btn-sm calendar-nav-btn" onclick="previousMonthMini()">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </button>
                    <h6 id="mini-calendar-month-year" class="mb-0 fs-16 fw-500">May 2023</h6>
                    <button class="btn btn-sm calendar-nav-btn" onclick="nextMonthMini()">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </button>
                </div>
                <div class="mini-calendar-weekdays">
                    <div class="mini-weekday">S</div>
                    <div class="mini-weekday">M</div>
                    <div class="mini-weekday">T</div>
                    <div class="mini-weekday">W</div>
                    <div class="mini-weekday">T</div>
                    <div class="mini-weekday">F</div>
                    <div class="mini-weekday">S</div>
                </div>
                <div id="mini-calendar-days" class="mini-calendar-days"></div>
            </div>

            <!-- Sidebar Navigation -->
            <div class="overview-section">
                <div class="overview-title">Overview</div>
                <div class="sidebar-nav">
                    <a href="/scheduler/admin_view/calendar" class="sidebar-nav-item">Calendar</a>
                    <a href="/scheduler/admin_view/appointmenttypes" class="sidebar-nav-item active">Appointment Types</a>
                    <a href="/scheduler/admin_view/categories" class="sidebar-nav-item">Categories</a>
                    <a href="/scheduler/admin_view/formquestions" class="sidebar-nav-item">Form Questions</a>
                    <a href="/scheduler/admin_view/merchantprofile" class="sidebar-nav-item">Merchant Profile</a>
                    <a href="/scheduler/admin_view/reports" class="sidebar-nav-item">Reports</a>
                </div>
            </div>
        </div>

        <!-- Right Content: Appointment Types - Full width on mobile/tablet, 9 cols on desktop -->
        <div class="col-12 col-lg-9 mobile-appointment-content">
            <div class="appointment-types-container">
                <!-- Header -->
                <div class="appointment-types-header">
                    <h2>Appointment Types</h2>
                    <a href="/scheduler/admin_view/newtypeofservice" class="btn btn-new-service">New Type of Service</a>
                </div>

                <!-- Appointment Type Items -->
                <div class="appointment-types-list">
                    <!-- Consultation -->
                    <div class="appointment-type-item">
                        <div class="appointment-type-info">
                            <div class="appointment-type-name">Consultation</div>
                            <div class="appointment-type-details">
                                <span>Reservation Fee: ₱30.00</span>
                                <span>50 minutes @@ ₱45.00</span>
                            </div>
                        </div>
                        <button class="btn btn-edit">Edit</button>
                    </div>

                    <!-- Medical Appointment -->
                    <div class="appointment-type-item">
                        <div class="appointment-type-info">
                            <div class="appointment-type-name">Medical Appointment</div>
                            <div class="appointment-type-details">
                                <span>Reservation Fee: ₱30.00</span>
                                <span>30 minutes @@ ₱45.00</span>
                            </div>
                        </div>
                        <button class="btn btn-edit">Edit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>;

@await Html.PartialAsync("../admin_view/_Scripts")
