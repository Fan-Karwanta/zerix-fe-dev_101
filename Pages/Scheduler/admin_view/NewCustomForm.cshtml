        margin-bottom: 1rem;
    }

    .fq-option-input {
        border: 1px solid #E0E0E0;
        border-radius: 4px;
        padding: 10px 12px;
        font-size: 14px;
        color: #333;
        width: 100%;
        background: #fff;
    }

    .fq-option-input:focus {
        outline: none;
        border-color: #999;
    }

    .fq-option-input::placeholder {
        color: #999;
    }

