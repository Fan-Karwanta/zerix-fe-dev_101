        margin-bottom: 1rem;
    }
    
    .fq-options-container {
        display: flex;
        flex-direction: column;
        gap: 8px;
        margin-bottom: 1rem;
    }
    
    .fq-option-row {
        display: flex;
        align-items: center;
        gap: 8px;
    }
    
    .fq-option-row input {
        flex: 1;
    }
    
    .fq-remove-option-btn {
        background: none;
        border: none;
        color: #999;
        font-size: 18px;
        cursor: pointer;
        padding: 0 4px;
        line-height: 1;
    }
    
    .fq-remove-option-btn:hover {
        color: #FF6B35;
    }
    
    .fq-add-option-btn {
        background: none;
        border: none;
        color: #FF6B35;
        font-size: 14px;
        font-weight: 400;
        padding: 0;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 4px;
    }
    
    .fq-add-option-btn:hover {
        color: #e55a2b;
    }

    .fq-option-input {
        border: 1px solid #E0E0E0;
        border-radius: 4px;
        padding: 10px 12px;
        font-size: 14px;
        color: #333;
        width: 100%;
        background: #fff;
    }

    .fq-option-input:focus {
        outline: none;
        border-color: #999;
    }

    .fq-option-input::placeholder {
        color: #999;
    }

