        border: 1px solid #E0E0E0;
        border-radius: 4px;
        padding: 10px 12px;
        font-size: 14px;
        color: #333;
        width: 100%;
        background: #fff;
        margin-bottom: 1rem;
    }

    .fq-question-input:focus {
        outline: none;
        border-color: #999;
    }

    .fq-question-input::placeholder {
        color: #999;
    }

    /* Options */
