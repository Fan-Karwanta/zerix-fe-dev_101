@page
@model zerix_fe_dev.Pages.Scheduler.admin_view.NewCustomFormModel
@{
    Layout = "_Scheduler";
    ViewData["Title"] = "Form Questions";
    ViewData["User"] = "Admin";
}

@await Html.PartialAsync("../_Styles")

@await Html.PartialAsync("../admin_view/_Styles")

@await Html.PartialAsync("../user_view/_Navigation")

@await Html.PartialAsync("../user_view/_MobileSidebar")

<div class="container px-4 my-3 pt-md-3 pt-3">
    <div class="row g-4">
        <div class="col-12">
            <!-- Desktop Header -->
            <div class="form-questions-desktop-header">
                <a href="/scheduler/admin_view/formquestions" class="form-questions-back-link">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <span class="ms-2">Go Back</span>
                </a>
                <h2 class="form-questions-page-title">Form Questions</h2>
            </div>

            <!-- Mobile Header -->
            <div class="form-questions-mobile-header">
                <div class="form-questions-mobile-header-inner">
                    <a href="/scheduler/admin_view/formquestions" class="form-questions-mobile-back-link">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                        <span class="fq-back-text">Go Back</span>
                    </a>
                    <h2 class="form-questions-mobile-page-title">Form Questions</h2>
                </div>
            </div>

            <!-- Main Content -->
            <div class="row fq-main-row">
                <!-- Left Column: Form shown while scheduling -->
                <div class="col-12 col-lg-3 mb-4 fq-sidebar-column">
                    <div class="fq-left-sidebar">
                        <h6 class="fq-sidebar-title">Form shown while scheduling</h6>
                        
                        <div class="fq-sidebar-item">
                            <div class="fq-sidebar-item-name">Megamall- Face</div>
                            <div class="fq-sidebar-services">
                                <div class="form-check fq-form-check">
                                    <input type="checkbox" class="form-check-input" id="megamall-hair" checked>
                                    <label class="form-check-label" for="megamall-hair">Hair Rebond</label>
                                </div>
                                <div class="form-check fq-form-check">
                                    <input type="checkbox" class="form-check-input" id="megamall-oil" checked>
                                    <label class="form-check-label" for="megamall-oil">Hot Oil</label>
                                </div>
                            </div>
                        </div>

                        <div class="fq-sidebar-item">
                            <div class="fq-sidebar-item-name">Robinsons- Face</div>
                            <div class="fq-sidebar-services">
                                <div class="form-check fq-form-check">
                                    <input type="checkbox" class="form-check-input" id="robinsons-hair" checked>
                                    <label class="form-check-label" for="robinsons-hair">Hair Rebond</label>
                                </div>
                                <div class="form-check fq-form-check">
                                    <input type="checkbox" class="form-check-input" id="robinsons-oil" checked>
                                    <label class="form-check-label" for="robinsons-oil">Hot Oil</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Column: Form Fields -->
                <div class="col-12 col-lg-9 fq-form-column">
                    <div class="fq-form-container">
                        <!-- Form Name -->
                        <div class="fq-field-group">
                            <label class="fq-field-label">Form Name <span class="fq-label-optional">(optional)</span></label>
                            <input type="text" class="fq-input-text" placeholder="Enter Name">
                        </div>

                        <!-- Description -->
                        <div class="fq-field-group">
                            <label class="fq-field-label">Description <span class="fq-label-optional">(optional)</span></label>
                            <textarea class="fq-textarea" rows="4" placeholder="Write some instructions about the upcoming appointment or refund policy"></textarea>
                        </div>

                        <!-- Question 1 -->
                        <div class="fq-question-container">
                            <div class="fq-question-header">
                                <div class="fq-question-left">
                                    <label class="fq-question-label">Question 1</label>
                                    <button class="fq-delete-btn">Delete</button>
                                </div>
                                <div class="fq-question-right">
                                    <div class="fq-dropdown" data-question="1">
                                    <button type="button" class="fq-dropdown-toggle">
                                        <span class="fq-dropdown-icon">≡</span>
                                        <span class="fq-dropdown-text">Textbox</span>
                                        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="fq-dropdown-arrow">
                                            <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                        </svg>
                                    </button>
                                    <div class="fq-dropdown-menu">
                                        <div class="fq-dropdown-item" data-value="textbox" data-icon="≡">
                                            <span class="fq-item-icon">≡</span>
                                            <span>Textbox</span>
                                        </div>
                                        <div class="fq-dropdown-item" data-value="multiple" data-icon="◉">
                                            <span class="fq-item-icon">◉</span>
                                            <span>Multiple Choice</span>
                                        </div>
                                        <div class="fq-dropdown-item" data-value="checkboxes" data-icon="☑">
                                            <span class="fq-item-icon">☑</span>
                                            <span>Checkboxes</span>
                                        </div>
                                        <div class="fq-dropdown-item" data-value="dropdown" data-icon="▼">
                                            <span class="fq-item-icon">▼</span>
                                            <span>Dropdown List</span>
                                        </div>
                                        <div class="fq-dropdown-item" data-value="number" data-icon="123">
                                            <span class="fq-item-icon">123</span>
                                            <span>Number</span>
                                        </div>
                                    </div>
                                </div>
                                </div>
                            </div>
                            <input type="text" class="fq-question-input" placeholder="ex. Write other concerns.">
                            <div class="fq-required-row">
                                <div class="form-check fq-form-check">
                                    <input class="form-check-input" type="checkbox" id="required1">
                                    <label class="form-check-label" for="required1">Required</label>
                                </div>
                            </div>
                        </div>

                        <!-- Question 2 - Multiple Choice -->
                        <div class="fq-question-container">
                            <div class="fq-question-header">
                                <div class="fq-question-left">
                                    <label class="fq-question-label">Question 2</label>
                                    <button class="fq-delete-btn">Delete</button>
                                </div>
                                <div class="fq-question-right">
                                    <div class="fq-dropdown" data-question="2">
                                    <button type="button" class="fq-dropdown-toggle">
                                        <span class="fq-dropdown-icon">◉</span>
                                        <span class="fq-dropdown-text">Multiple Choice</span>
                                        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="fq-dropdown-arrow">
                                            <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                        </svg>
                                    </button>
                                    <div class="fq-dropdown-menu">
                                        <div class="fq-dropdown-item" data-value="textbox" data-icon="≡">
                                            <span class="fq-item-icon">≡</span>
                                            <span>Textbox</span>
                                        </div>
                                        <div class="fq-dropdown-item" data-value="multiple" data-icon="◉">
                                            <span class="fq-item-icon">◉</span>
                                            <span>Multiple Choice</span>
                                        </div>
                                        <div class="fq-dropdown-item" data-value="checkboxes" data-icon="☑">
                                            <span class="fq-item-icon">☑</span>
                                            <span>Checkboxes</span>
                                        </div>
                                        <div class="fq-dropdown-item" data-value="dropdown" data-icon="▼">
                                            <span class="fq-item-icon">▼</span>
                                            <span>Dropdown List</span>
                                        </div>
                                        <div class="fq-dropdown-item" data-value="number" data-icon="123">
                                            <span class="fq-item-icon">123</span>
                                            <span>Number</span>
                                        </div>
                                    </div>
                                </div>
                                </div>
                            </div>
                            <input type="text" class="fq-question-input" placeholder="ex. Do you reside in Metro Manila?">
                            <div class="fq-options-container">
                                <div class="fq-option-row" data-option-index="1">
                                    <input type="text" class="fq-option-input" placeholder="1. Enter Option Here">
                                    <button type="button" class="fq-remove-option-btn" title="Remove option">&times;</button>
                                </div>
                                <button type="button" class="fq-add-option-btn">+ Add Option</button>
                            </div>
                            <div class="fq-required-row">
                                <div class="form-check fq-form-check">
                                    <input class="form-check-input" type="checkbox" id="required2">
                                    <label class="form-check-label" for="required2">Required</label>
                                </div>
                            </div>
                        </div>

                        <!-- Question 3 - Checkboxes -->
                        <div class="fq-question-container">
                            <div class="fq-question-header">
                                <div class="fq-question-left">
                                    <label class="fq-question-label">Question 2</label>
                                    <button class="fq-delete-btn">Delete</button>
                                </div>
                                <div class="fq-question-right">
                                    <div class="fq-dropdown" data-question="3">
                                    <button type="button" class="fq-dropdown-toggle">
                                        <span class="fq-dropdown-icon">☑</span>
                                        <span class="fq-dropdown-text">Checkboxes</span>
                                        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="fq-dropdown-arrow">
                                            <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                        </svg>
                                    </button>
                                    <div class="fq-dropdown-menu">
                                        <div class="fq-dropdown-item" data-value="textbox" data-icon="≡">
                                            <span class="fq-item-icon">≡</span>
                                            <span>Textbox</span>
                                        </div>
                                        <div class="fq-dropdown-item" data-value="multiple" data-icon="◉">
                                            <span class="fq-item-icon">◉</span>
                                            <span>Multiple Choice</span>
                                        </div>
                                        <div class="fq-dropdown-item" data-value="checkboxes" data-icon="☑">
                                            <span class="fq-item-icon">☑</span>
                                            <span>Checkboxes</span>
                                        </div>
                                        <div class="fq-dropdown-item" data-value="dropdown" data-icon="▼">
                                            <span class="fq-item-icon">▼</span>
                                            <span>Dropdown List</span>
                                        </div>
                                        <div class="fq-dropdown-item" data-value="number" data-icon="123">
                                            <span class="fq-item-icon">123</span>
                                            <span>Number</span>
                                        </div>
                                    </div>
                                </div>
                                </div>
                            </div>
                            <input type="text" class="fq-question-input" placeholder="ex. Do you have any allergies?">
                            <div class="fq-options-container">
                                <div class="fq-option-row" data-option-index="1">
                                    <input type="text" class="fq-option-input" value="Nuts" placeholder="1. Enter Option Here">
                                    <button type="button" class="fq-remove-option-btn" title="Remove option">&times;</button>
                                </div>
                                <div class="fq-option-row" data-option-index="2">
                                    <input type="text" class="fq-option-input" value="Dairy" placeholder="2. Enter Option Here">
                                    <button type="button" class="fq-remove-option-btn" title="Remove option">&times;</button>
                                </div>
                                <div class="fq-option-row" data-option-index="3">
                                    <input type="text" class="fq-option-input" value="None" placeholder="3. Enter Option Here">
                                    <button type="button" class="fq-remove-option-btn" title="Remove option">&times;</button>
                                </div>
                                <button type="button" class="fq-add-option-btn">+ Add Option</button>
                            </div>
                        </div>

                        <!-- Add Question Button -->
                        <div class="fq-add-question-wrapper">
                            <button class="fq-add-question-btn">
                                + Add Question
                            </button>
                        </div>

                        <!-- Action Buttons (Desktop) -->
                        <div class="fq-action-buttons fq-action-buttons-desktop">
                            <button class="fq-cancel-btn">Cancel</button>
                            <button class="fq-save-btn">Save Form</button>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Mobile Action Buttons (at bottom) -->
            <div class="fq-mobile-actions">
                <button class="fq-save-btn fq-save-btn-mobile">Save Form</button>
                <button class="fq-cancel-btn fq-cancel-btn-mobile">Cancel</button>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("../admin_view/_Scripts")

<style>
    /* ==================== FORM QUESTIONS PAGE - DEDICATED STYLES ==================== */
    
    /* Desktop Header */
    .form-questions-desktop-header {
        display: none;
        align-items: center;
        margin-bottom: 1.5rem;
        position: relative;
        margin-top: 0.5rem;
    }
    
    @@media (min-width: 768px) {
        .form-questions-desktop-header {
            display: flex;
        }
    }
    
    .form-questions-back-link {
        color: #FF6B35;
        font-size: 14px;
        font-weight: 400;
        display: flex;
        align-items: center;
        text-decoration: none;
        padding: 0;
    }

    .form-questions-back-link:hover {
        color: #e55a2b;
    }

    .form-questions-back-link svg {
        stroke: #FF6B35;
        width: 20px;
        height: 20px;
    }
    
    .form-questions-page-title {
        font-size: 32px;
        font-weight: 400;
        color: #333;
        margin: 0;
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
    }
    
    /* Mobile Header */
    .form-questions-mobile-header {
        display: block;
    }
    
    @@media (min-width: 768px) {
        .form-questions-mobile-header {
            display: none;
        }
    }
    
    .form-questions-mobile-header-inner {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
        position: relative;
        margin-top: 1.5rem;
    }
    
    .form-questions-mobile-back-link {
        color: #FF6B35;
        font-size: 14px;
        font-weight: 400;
        display: flex;
        align-items: center;
        text-decoration: none;
        padding: 0;
        position: absolute;
        left: 0;
    }
    
    .form-questions-mobile-back-link:hover {
        color: #e55a2b;
    }
    
    .form-questions-mobile-back-link svg {
        stroke: #FF6B35;
        width: 20px;
        height: 20px;
    }
    
    .fq-back-text {
        margin-left: 8px;
        display: none;
    }
    
    @@media (min-width: 480px) {
        .fq-back-text {
            display: inline;
        }
    }
    
    .form-questions-mobile-page-title {
        font-size: 32px;
        font-weight: 400;
        color: #333;
        margin: 0;
    }

    /* Left Sidebar */
    .fq-left-sidebar {
        background: transparent;
        border: none;
        border-radius: 0;
        padding: 0;
    }

    .fq-sidebar-title {
        font-size: 12px;
        font-weight: 400;
        color: #999;
        margin-bottom: 16px;
    }

    .fq-sidebar-item {
        margin-bottom: 16px;
    }

    .fq-sidebar-item:last-child {
        margin-bottom: 0;
    }

    .fq-sidebar-item-name {
        font-size: 14px;
        font-weight: 600;
        color: #333;
        margin-bottom: 10px;
    }

    .fq-sidebar-services {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    /* Form Check Checkbox Styling */
    .fq-form-check {
        display: flex;
        align-items: center;
        gap: 8px;
        padding-left: 0;
        margin-bottom: 0;
    }
    
    .fq-form-check .form-check-input {
        width: 20px;
        height: 20px;
        margin: 0;
        border: 2px solid #E0E0E0;
        border-radius: 4px;
        cursor: pointer;
        flex-shrink: 0;
    }
    
    .fq-form-check .form-check-input:checked {
        background-color: #FF6B35;
        border-color: #FF6B35;
    }
    
    .fq-form-check .form-check-input:focus {
        box-shadow: none;
        border-color: #FF6B35;
    }
    
    .fq-form-check .form-check-label {
        font-size: 14px;
        color: #333;
        cursor: pointer;
        font-weight: 400;
        margin: 0;
    }

    /* Form Container */
    .fq-form-container {
        background: transparent;
        padding: 0;
    }

    /* Form Fields */
    .fq-field-group {
        margin-bottom: 1.5rem;
    }

    .fq-field-label {
        font-size: 14px;
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
        display: block;
    }

    .fq-label-optional {
        font-weight: 400;
        color: #999;
    }

    .fq-input-text {
        border: 1px solid #E0E0E0;
        border-radius: 4px;
        padding: 10px 12px;
        font-size: 14px;
        color: #333;
        background: #fff;
        width: 100%;
    }

    .fq-input-text:focus {
        border-color: #999;
        box-shadow: none;
        outline: none;
    }

    .fq-input-text::placeholder {
        color: #999;
    }
    
    .fq-textarea {
        border: 1px solid #E0E0E0;
        border-radius: 4px;
        padding: 10px 12px;
        font-size: 14px;
        color: #333;
        background: #fff;
        width: 100%;
        resize: vertical;
    }

    .fq-textarea:focus {
        border-color: #999;
        box-shadow: none;
        outline: none;
    }

    .fq-textarea::placeholder {
        color: #999;
    }

    /* Question Container */
    .fq-question-container {
        border: none;
        border-radius: 0;
        padding: 20px 0;
        background: transparent;
        border-bottom: 1px solid #E0E0E0;
        margin-bottom: 1rem;
    }

    .fq-question-container:last-of-type {
        border-bottom: none;
    }

    /* Question Header */
    .fq-question-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        gap: 16px;
        margin-bottom: 1rem;
    }

    .fq-question-left {
        display: flex;
        align-items: center;
        gap: 12px;
        flex-shrink: 0;
    }

    .fq-question-right {
        margin-left: auto;
        flex-shrink: 0;
    }

    .fq-question-label {
        font-size: 14px;
        font-weight: 600;
        color: #333;
        margin: 0;
    }

    .fq-delete-btn {
        background: none;
        border: none;
        color: #FF6B35;
        font-size: 14px;
        font-weight: 400;
        padding: 0;
        cursor: pointer;
        line-height: 1;
        display: inline-flex;
        align-items: center;
        height: 38px;
    }

    .fq-delete-btn:hover {
        color: #e55a2b;
    }

    /* Dropdown */
    .fq-dropdown {
        position: relative;
        display: inline-block;
    }

    .fq-dropdown-toggle {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: #fff;
        border: 1px solid #E0E0E0;
        border-radius: 4px;
        padding: 8px 12px;
        font-size: 14px;
        color: #333;
        cursor: pointer;
        min-width: 140px;
        height: 38px;
        box-sizing: border-box;
    }

    .fq-dropdown-toggle:hover {
        border-color: #FF6B35;
    }

    .fq-dropdown-icon {
        font-size: 16px;
        color: #666;
    }

    .fq-dropdown-text {
        flex: 1;
        text-align: left;
    }

    .fq-dropdown-arrow {
        stroke: #666;
        margin-left: auto;
    }

    .fq-dropdown-menu {
        position: absolute;
        right: 0;
        top: calc(100% + 4px);
        background: #fff;
        border: 1px solid #E0E0E0;
        border-radius: 4px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        min-width: 180px;
        z-index: 1000;
        display: none;
    }

    .fq-dropdown-menu.show {
        display: block;
    }

    .fq-dropdown-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 10px 16px;
        font-size: 14px;
        color: #333;
        cursor: pointer;
        transition: background-color 0.15s ease;
    }

    .fq-dropdown-item:hover {
        background: #F5F5F5;
    }

    .fq-item-icon {
        font-size: 16px;
        color: #666;
        width: 20px;
        text-align: center;
    }

    /* Question Input */
    .fq-question-input {
        border: 1px solid #E0E0E0;
        border-radius: 4px;
        padding: 10px 12px;
        font-size: 14px;
        color: #333;
        width: 100%;
        background: #fff;
        margin-bottom: 1rem;
    }

    .fq-question-input:focus {
        outline: none;
        border-color: #999;
    }

    .fq-question-input::placeholder {
        color: #999;
    }

