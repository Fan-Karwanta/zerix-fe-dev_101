    .fq-add-question-wrapper {
        margin-bottom: 1.5rem;
    }

    .fq-add-question-btn {
        font-size: 14px;
        font-weight: 400;
        color: #FF6B35;
        text-decoration: none;
        background: none;
        border: none;
        padding: 0;
        cursor: pointer;
    }

    .fq-add-question-btn:hover {
        color: #e55a2b;
    }

