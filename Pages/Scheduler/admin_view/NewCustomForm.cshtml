<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Question counter for adding new questions
        let questionCounter = document.querySelectorAll('.fq-question-container').length;
        
        // Placeholder text based on question type
        const placeholdersByType = {
            'textbox': 'ex. Write other concerns.',
            'multiple': 'ex. Do you reside in Metro Manila?',
            'checkboxes': 'ex. Do you have any allergies?',
            'dropdown': 'ex. Select your preferred time slot',
            'number': 'ex. Enter your age'
        };
        
        // Initialize dropdowns
        function initializeDropdowns() {
            const dropdowns = document.querySelectorAll('.fq-dropdown');
            
            dropdowns.forEach(dropdown => {
                // Skip if already initialized
                if (dropdown.dataset.initialized) return;
                dropdown.dataset.initialized = 'true';
                
                const toggle = dropdown.querySelector('.fq-dropdown-toggle');
                const menu = dropdown.querySelector('.fq-dropdown-menu');
                const items = dropdown.querySelectorAll('.fq-dropdown-item');
                const iconSpan = toggle.querySelector('.fq-dropdown-icon');
                const textSpan = toggle.querySelector('.fq-dropdown-text');
                
                // Toggle dropdown on button click
                toggle.addEventListener('click', function(e) {
                    e.stopPropagation();
                    
                    // Close all other dropdowns
                    document.querySelectorAll('.fq-dropdown-menu.show').forEach(otherMenu => {
                        if (otherMenu !== menu) {
                            otherMenu.classList.remove('show');
                        }
                    });
                    
                    // Toggle current dropdown
                    menu.classList.toggle('show');
                });
                
                // Handle item selection
                items.forEach(item => {
                    item.addEventListener('click', function(e) {
                        e.stopPropagation();
                        
                        const value = this.getAttribute('data-value');
                        const icon = this.getAttribute('data-icon');
                        // Get only the text from the span, not the icon
                        const textElement = this.querySelector('span:last-child');
                        const text = textElement ? textElement.textContent.trim() : this.textContent.trim();
                        
                        // Update toggle button
                        iconSpan.textContent = icon;
                        textSpan.textContent = text;
                        
                        // Update placeholder based on selected type
                        const questionContainer = dropdown.closest('.fq-question-container');
                        if (questionContainer) {
                            const questionInput = questionContainer.querySelector('.fq-question-input');
                            if (questionInput && placeholdersByType[value]) {
                                questionInput.placeholder = placeholdersByType[value];
                            }
                            
                            // Update question content based on type
                            updateQuestionContent(questionContainer, value);
                        }
                        
                        // Close dropdown
                        menu.classList.remove('show');
                    });
                });
            });
        }
        
        // Update question content based on type (show/hide options section)
        function updateQuestionContent(container, type) {
            // Remove existing options section if any
            const existingOptionGroup = container.querySelector('.fq-option-group');
            const existingOptionsList = container.querySelector('.fq-options-list');
            const existingOptionsContainer = container.querySelector('.fq-options-container');
            if (existingOptionGroup) existingOptionGroup.remove();
            if (existingOptionsList) existingOptionsList.remove();
            if (existingOptionsContainer) existingOptionsContainer.remove();
            
            // Add options section for types that need it
            if (type === 'multiple' || type === 'checkboxes' || type === 'dropdown') {
                const questionInput = container.querySelector('.fq-question-input');
                const optionsContainer = document.createElement('div');
                optionsContainer.className = 'fq-options-container';
                optionsContainer.innerHTML = `
                    <div class="fq-option-row" data-option-index="1">
                        <input type="text" class="fq-option-input" placeholder="1. Enter Option Here">
                        <button type="button" class="fq-remove-option-btn" title="Remove option">&times;</button>
                    </div>
                    <button type="button" class="fq-add-option-btn">+ Add Option</button>
                `;
                questionInput.insertAdjacentElement('afterend', optionsContainer);
                initializeOptionButtons(optionsContainer);
            }
        }
        
        // Initialize add/remove option buttons
        function initializeOptionButtons(container) {
            const addBtn = container.querySelector('.fq-add-option-btn');
            if (addBtn && !addBtn.dataset.initialized) {
                addBtn.dataset.initialized = 'true';
                addBtn.addEventListener('click', function() {
                    const optionRows = container.querySelectorAll('.fq-option-row');
                    const newIndex = optionRows.length + 1;
                    const newRow = document.createElement('div');
                    newRow.className = 'fq-option-row';
                    newRow.dataset.optionIndex = newIndex;
                    newRow.innerHTML = `
                        <input type="text" class="fq-option-input" placeholder="${newIndex}. Enter Option Here">
                        <button type="button" class="fq-remove-option-btn" title="Remove option">&times;</button>
                    `;
                    addBtn.insertAdjacentElement('beforebegin', newRow);
                    initializeRemoveButtons(container);
                });
            }
            initializeRemoveButtons(container);
        }
        
        // Initialize remove option buttons
        function initializeRemoveButtons(container) {
            container.querySelectorAll('.fq-remove-option-btn').forEach(btn => {
                if (btn.dataset.initialized) return;
                btn.dataset.initialized = 'true';
                btn.addEventListener('click', function() {
                    const row = this.closest('.fq-option-row');
                    if (row) {
                        row.remove();
                        renumberOptions(container);
                    }
                });
            });
        }
        
        // Renumber options after removal
        function renumberOptions(container) {
            const rows = container.querySelectorAll('.fq-option-row');
            rows.forEach((row, index) => {
                const input = row.querySelector('.fq-option-input');
                if (input) {
                    const currentValue = input.value;
                    input.placeholder = `${index + 1}. Enter Option Here`;
                    row.dataset.optionIndex = index + 1;
                }
            });
        }
        
        // Create a new question HTML
        function createQuestionHTML(questionNumber) {
            return `
                <div class="fq-question-container">
                    <div class="fq-question-header">
                        <div class="fq-question-left">
                            <label class="fq-question-label">Question ${questionNumber}</label>
                            <button class="fq-delete-btn">Delete</button>
                        </div>
                        <div class="fq-question-right">
                            <div class="fq-dropdown" data-question="${questionNumber}">
                                <button type="button" class="fq-dropdown-toggle">
                                    <span class="fq-dropdown-icon">≡</span>
                                    <span class="fq-dropdown-text">Textbox</span>
                                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="fq-dropdown-arrow">
                                        <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                </button>
                                <div class="fq-dropdown-menu">
                                    <div class="fq-dropdown-item" data-value="textbox" data-icon="≡">
                                        <span class="fq-item-icon">≡</span>
                                        <span>Textbox</span>
                                    </div>
                                    <div class="fq-dropdown-item" data-value="multiple" data-icon="◉">
                                        <span class="fq-item-icon">◉</span>
                                        <span>Multiple Choice</span>
                                    </div>
                                    <div class="fq-dropdown-item" data-value="checkboxes" data-icon="☑">
                                        <span class="fq-item-icon">☑</span>
                                        <span>Checkboxes</span>
                                    </div>
                                    <div class="fq-dropdown-item" data-value="dropdown" data-icon="▼">
                                        <span class="fq-item-icon">▼</span>
                                        <span>Dropdown List</span>
                                    </div>
                                    <div class="fq-dropdown-item" data-value="number" data-icon="123">
                                        <span class="fq-item-icon">123</span>
                                        <span>Number</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <input type="text" class="fq-question-input" placeholder="ex. Write other concerns.">
                    <div class="fq-required-row">
                        <div class="form-check fq-form-check">
                            <input class="form-check-input" type="checkbox" id="required${questionNumber}">
                            <label class="form-check-label" for="required${questionNumber}">Required</label>
                        </div>
                    </div>
                </div>
            `;
        }
        
        // Add Question button functionality
        const addQuestionBtn = document.querySelector('.fq-add-question-btn');
        if (addQuestionBtn) {
            addQuestionBtn.addEventListener('click', function() {
                questionCounter++;
                const addQuestionWrapper = document.querySelector('.fq-add-question-wrapper');
                const newQuestionHTML = createQuestionHTML(questionCounter);
                
                // Insert new question before the Add Question button
                addQuestionWrapper.insertAdjacentHTML('beforebegin', newQuestionHTML);
                
                // Initialize dropdown for the new question
                initializeDropdowns();
                
                // Initialize delete button for the new question
                initializeDeleteButtons();
            });
        }
        
        // Delete button functionality
        function initializeDeleteButtons() {
            document.querySelectorAll('.fq-delete-btn').forEach(btn => {
                // Skip if already initialized
                if (btn.dataset.initialized) return;
                btn.dataset.initialized = 'true';
                
                btn.addEventListener('click', function() {
                    const questionContainer = this.closest('.fq-question-container');
                    if (questionContainer) {
                        questionContainer.remove();
                        // Renumber remaining questions
                        renumberQuestions();
                    }
                });
            });
        }
        
        // Renumber questions after deletion
        function renumberQuestions() {
            const questions = document.querySelectorAll('.fq-question-container');
            questions.forEach((question, index) => {
                const label = question.querySelector('.fq-question-label');
                if (label) {
                    label.textContent = `Question ${index + 1}`;
                }
                const checkbox = question.querySelector('.form-check-input');
                const checkboxLabel = question.querySelector('.form-check-label');
                if (checkbox && checkboxLabel) {
                    checkbox.id = `required${index + 1}`;
                    checkboxLabel.setAttribute('for', `required${index + 1}`);
                }
            });
            questionCounter = questions.length;
        }
        
        // Initialize on page load
        initializeDropdowns();
        initializeDeleteButtons();
        
        // Initialize option buttons for existing questions
        document.querySelectorAll('.fq-options-container').forEach(container => {
            initializeOptionButtons(container);
        });
        
        // Close dropdowns when clicking outside
        document.addEventListener('click', function() {
            document.querySelectorAll('.fq-dropdown-menu.show').forEach(menu => {
                menu.classList.remove('show');
            });
        });
    });
</script>
