<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Function to toggle category children visibility
        function toggleCategoryChildren(parentCheckbox) {
            const parentId = parentCheckbox.getAttribute('data-parent');
            const children = document.querySelectorAll('.category-children[data-parent="' + parentId + '"]');
            
            children.forEach(function(child) {
                if (parentCheckbox.checked) {
                    child.style.display = 'block';
                } else {
                    child.style.display = 'none';
                }
            });
        }
        
        // Initialize: Hide all unchecked parent's children
        const allParentCheckboxes = document.querySelectorAll('.category-parent-checkbox');
        allParentCheckboxes.forEach(function(checkbox) {
            toggleCategoryChildren(checkbox);
            
            // Add event listener for future changes
            checkbox.addEventListener('change', function() {
                toggleCategoryChildren(this);
            });
        });
    });
</script>
