@page
@model zerix_fe_dev.Pages.Scheduler.admin_view.NewTypeOfServiceModel
@{
    Layout = "_Scheduler";
    ViewData["Title"] = "New Type of Service";
    ViewData["User"] = "Admin";
}

@await Html.PartialAsync("../_Styles")

@await Html.PartialAsync("../admin_view/_Styles")

@await Html.PartialAsync("../user_view/_Navigation")

@await Html.PartialAsync("../user_view/_MobileSidebar")

<div class="container px-4 my-3 pt-md-3 pt-3">
    <div class="row">
        <div class="col-12">
            <!-- Header with Back Button and Title -->
            <div class="d-flex align-items-center mb-4 header-container-toS">
                <a href="/scheduler/admin_view/appointmenttypes" class="back-link d-inline-flex align-items-center back-toS">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M15 18L9 12L15 6" stroke="#ff5400" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </a>
                <h2 class="fs-32 ff-default font-darkgray fw-400 mb-0 page-title-toS">New Type of Service</h2>
            </div>

            <!-- Form Container -->
            <div class="new-service-form-container">
                <form>
                    <!--    Appointment Name -->
                    <div class="form-group mb-4">
                        <label class="form-label">Appointment Name</label>
                        <input type="text" class="form-control" placeholder="Enter Name" />
                    </div>

                    <!-- Note Template -->
                    <div class="form-group mb-4">
                        <label class="form-label">Note/ Reminder</label>
                        <textarea class="form-control" rows="4" placeholder="Write some instructions about the upcoming appointment or refund policy" style="height: 100px;"></textarea>
                    </div>

                    <!-- Duration and Block of Time -->
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="form-label">Duration</label>
                            <input type="number" class="form-control" placeholder="0" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Block of Time (Minutes between bookings)</label>
                            <input type="number" class="form-control" placeholder="0" />
                        </div>
                    </div>

                    <!-- Price and Reservation Fee -->
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="form-label">Price</label>
                            <input type="number" class="form-control" placeholder="0" step="0.01" />
                            <div class="form-check mt-2">
                                <input class="form-check-input" type="checkbox" id="requiredFullPayment">
                                <label class="form-check-label" for="requiredFullPayment">Required full payment</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Reservation Fee</label>
                            <input type="number" class="form-control" placeholder="0" step="0.01" />
                        </div>
                    </div>

                    <!-- Refund Policy -->
                    <div class="form-group mb-4">
                        <label class="form-label">Refund Policy</label>
                        <div class="refund-policy-options">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="refundPolicy" id="refundFull" checked>
                                <label class="form-check-label" for="refundFull">Refund in Full (Ravoke the Total Amount Paid)</label>
                            </div>
                            <div class="form-check mt-2">
                                <input class="form-check-input" type="radio" name="refundPolicy" id="refundPartial">
                                <label class="form-check-label" for="refundPartial">Partial Refund (Non-Refundable Reservation Fee)</label>
                            </div>
                            <div class="form-check mt-2">
                                <input class="form-check-input" type="radio" name="refundPolicy" id="noRefund">
                                <label class="form-check-label" for="noRefund">No Refund</label>
                            </div>
                            <div class="form-check mt-2">
                                <input class="form-check-input" type="radio" name="refundPolicy" id="refundPercentage">
                                <label class="form-check-label" for="refundPercentage">Refund a Percentage of the Total Price</label>
                            </div>
                            <input type="number" class="form-control mt-2" placeholder="0" style="max-width: 150px;" />
                        </div>
                    </div>

                    <!-- Refund Duration -->
                    <div class="form-group mb-4">
                        <label class="form-label">Refund Duration (After the Booking Date)</label>
                        <select class="form-select">
                            <option selected>0</option>
                            <option value="1">1 day</option>
                            <option value="2">2 days</option>
                            <option value="3">3 days</option>
                            <option value="7">1 week</option>
                            <option value="14">2 weeks</option>
                        </select>
                    </div>

                    <!-- Access -->
                    <div class="form-group mb-4">
                        <label class="form-label">Access</label>
                        <p class="form-text text-muted small mb-2">This appointment will only be visible to selected User Groups</p>
                        <div class="access-checkboxes">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="accessAll" checked>
                                <label class="form-check-label" for="accessAll">All</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="accessMIS">
                                <label class="form-check-label" for="accessMIS">MIS</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="accessHR">
                                <label class="form-check-label" for="accessHR">HR</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="accessAccounting">
                                <label class="form-check-label" for="accessAccounting">Accounting</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="accessClients">
                                <label class="form-check-label" for="accessClients">Clients</label>
                            </div>
                        </div>
                    </div>

                    <!-- Category -->
                    <div class="form-group mb-4">
                        <label class="form-label">Category</label>
                        <p class="form-text text-muted small mb-2">Select the category in which this appointment should be included</p>
                        <div class="category-tree">
                            <div class="category-item">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="category" id="categoryMain" checked>
                                    <label class="form-check-label fw-500" for="categoryMain">Main Category</label>
                                </div>
                                <div class="category-children ">
                                    <div class="category-subitem">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="category" id="categoryMegamind">
                                            <label class="form-check-label fw-500" for="categoryMegamind">Megamall</label>
                                        </div>
                                        <div class="category-children ">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="category" id="categoryMegamindHair">
                                                <label class="form-check-label" for="categoryMegamindHair">Hair</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="category" id="categoryMegamindFeet">
                                                <label class="form-check-label" for="categoryMegamindFeet">Feet</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="category" id="categoryMegamindFace">
                                                <label class="form-check-label" for="categoryMegamindFace">Face</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="category" id="categoryMegamindHand">
                                                <label class="form-check-label" for="categoryMegamindHand">Hand</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="category" id="categoryMegamindHead">
                                                <label class="form-check-label" for="categoryMegamindHead">Head</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="category-item mt-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="category" id="categoryRenacence">
                                    <label class="form-check-label fw-500" for="categoryRenacence">Robinsons Galeria</label>
                                </div>
                                <div class="category-children ">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="category" id="categoryRenacenceNew">
                                        <label class="form-check-label" for="categoryRenacenceNew">Hair</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="category" id="categoryRenacenceFeet">
                                        <label class="form-check-label" for="categoryRenacenceFeet">Feet</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="category" id="categoryRenacenceFace">
                                        <label class="form-check-label" for="categoryRenacenceFace">Face</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="category" id="categoryRenacenceHand">
                                        <label class="form-check-label" for="categoryRenacenceHand">Hand</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="category" id="categoryRenacenceHead">
                                        <label class="form-check-label" for="categoryRenacenceHead">Head</label>
                                    </div>
                                </div>
                            </div>
                            <div class="category-item mt-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="category" id="categoryAntipolo">
                                    <label class="form-check-label fw-500" for="categoryAntipolo">Robinsons Antipolo</label>
                                </div>
                            </div>
                            <div class="category-item mt-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="category" id="categorySMMall">
                                    <label class="form-check-label fw-500" for="categorySMMall">SM Mall of Asia</label>
                                </div>
                            </div>
                            <div class="category-item mt-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="category" id="categorySMAura">
                                    <label class="form-check-label fw-500" for="categorySMAura">SM Aura</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="form-actions d-flex gap-3 mt-5">
                        <button type="submit" class="btn btn-save-availability">Set your availability</button>
                        <button type="button" class="btn btn-delete-type">Delete Appointment Type</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
