@page
@model zerix_fe_dev.Pages.Scheduler.admin_view.NewTypeOfServiceModel
@{
    Layout = "_Scheduler";
    ViewData["Title"] = "New Type of Service";
    ViewData["User"] = "Admin";
}

@await Html.PartialAsync("../admin_view/_Styles")

@await Html.PartialAsync("../admin_view/_Navigation")

@await Html.PartialAsync("../admin_view/_MobileSidebar")

<div class="container px-4 my-3 pt-md-3 pt-3">
    <div class="row">
        <div class="col-12">
            <!-- Header with Back Button and Title -->
            <div class="d-flex align-items-center mb-4 header-container-toS">
                <a href="/scheduler/admin_view/appointmenttypes" class="back-link d-inline-flex align-items-center back-toS">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M19 12H5M12 19L5 12L12 5" stroke="#ff5400" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <span class="ms-2">Back</span>
                </a>
                <h2 class="fs-32 ff-default font-darkgray fw-400 mb-0 page-title-toS">New Type of Service</h2>
            </div>

            <!-- Form Container -->
            <div class="new-service-form-container">
                <form>
                    <!-- Type Name -->
                    <div class="form-group mb-4">
                        <label class="form-label">Type Name</label>
                        <input type="text" class="form-control" placeholder="Type Name" />
                    </div>

                    <!-- Note Template -->
                    <div class="form-group mb-4">
                        <label class="form-label">Note Template</label>
                        <textarea class="form-control" rows="4" placeholder="Write some instructions about the upcoming appointment to your client"></textarea>
                    </div>

                    <!-- Duration and Max # Pax -->
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="form-label">Duration</label>
                            <select class="form-select">
                                <option selected>Select duration</option>
                                <option value="15">15 minutes</option>
                                <option value="30">30 minutes</option>
                                <option value="45">45 minutes</option>
                                <option value="60">1 hour</option>
                                <option value="90">1.5 hours</option>
                                <option value="120">2 hours</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Max # Pax (Person/ Availed/ Booking)</label>
                            <select class="form-select">
                                <option selected>Select max pax</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="10">10</option>
                            </select>
                        </div>
                    </div>

                    <!-- Price and Reservation Fee -->
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="form-label">Price</label>
                            <input type="number" class="form-control" placeholder="0" step="0.01" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Reservation Fee</label>
                            <input type="number" class="form-control" placeholder="0" step="0.01" />
                        </div>
                    </div>

                    <!-- Type of Duration -->
                    <div class="form-group mb-4">
                        <label class="form-label">Type of Duration</label>
                        <select class="form-select">
                            <option selected>Select type</option>
                            <option value="minutes">Minutes</option>
                            <option value="hours">Hours</option>
                            <option value="days">Days</option>
                        </select>
                    </div>

                    <!-- Access -->
                    <div class="form-group mb-4">
                        <label class="form-label">Access</label>
                        <p class="form-text text-muted small mb-2">This appointment will only be visible to selected User Groups</p>
                        <div class="access-checkboxes">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="accessAll" checked>
                                <label class="form-check-label" for="accessAll">All</label>
                            </div>
                            <div class="form-check ms-4">
                                <input class="form-check-input" type="checkbox" id="accessHR">
                                <label class="form-check-label" for="accessHR">HR</label>
                            </div>
                            <div class="form-check ms-4">
                                <input class="form-check-input" type="checkbox" id="accessIT">
                                <label class="form-check-label" for="accessIT">IT</label>
                            </div>
                            <div class="form-check ms-4">
                                <input class="form-check-input" type="checkbox" id="accessAccounting">
                                <label class="form-check-label" for="accessAccounting">Accounting</label>
                            </div>
                            <div class="form-check ms-4">
                                <input class="form-check-input" type="checkbox" id="accessOthers">
                                <label class="form-check-label" for="accessOthers">Others</label>
                            </div>
                        </div>
                    </div>

                    <!-- Category -->
                    <div class="form-group mb-4">
                        <label class="form-label">Category</label>
                        <p class="form-text text-muted small mb-2">Select the category to which this appointment should be grouped.</p>
                        <div class="category-tree">
                            <div class="category-item">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="category" id="categoryMain" checked>
                                    <label class="form-check-label fw-500" for="categoryMain">Main Category</label>
                                </div>
                                <div class="category-children ms-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="category" id="categoryHair">
                                        <label class="form-check-label" for="categoryHair">Hair</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="category" id="categoryFace">
                                        <label class="form-check-label" for="categoryFace">Face</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="category" id="categoryHand">
                                        <label class="form-check-label" for="categoryHand">Hand</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="category" id="categoryFeet">
                                        <label class="form-check-label" for="categoryFeet">Feet</label>
                                    </div>
                                </div>
                            </div>
                            <div class="category-item mt-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="category" id="categoryBranch">
                                    <label class="form-check-label fw-500" for="categoryBranch">By Branch/ Agency</label>
                                </div>
                                <div class="category-children ms-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="category" id="categoryHairSub">
                                        <label class="form-check-label" for="categoryHairSub">Hair</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="category" id="categoryFaceSub">
                                        <label class="form-check-label" for="categoryFaceSub">Face</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="category" id="categoryHandSub">
                                        <label class="form-check-label" for="categoryHandSub">Hand</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="category" id="categoryFeetSub">
                                        <label class="form-check-label" for="categoryFeetSub">Feet</label>
                                    </div>
                                </div>
                            </div>
                            <div class="category-item mt-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="category" id="categoryMultiple">
                                    <label class="form-check-label fw-500" for="categoryMultiple">Multiple Svc Lvl</label>
                                </div>
                                <div class="category-children ms-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="category" id="categoryHairMulti">
                                        <label class="form-check-label" for="categoryHairMulti">Hair</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="category" id="categorySMMore">
                                        <label class="form-check-label" for="categorySMMore">SM More...</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="form-actions d-flex gap-3 mt-5">
                        <button type="submit" class="btn btn-save-availability">Set Slot Availability</button>
                        <button type="button" class="btn btn-delete-type">Delete Appointment Type</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
/* New Type of Service Form Styles */
.new-service-form-container {
    background: white;
    border-radius: 8px;
    padding: 30px;
    max-width: 800px;
}

.form-label {
    font-size: 14px;
    font-weight: 500;
    color: #333;
    margin-bottom: 8px;
}

.form-control,
.form-select {
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    padding: 10px 15px;
    font-size: 14px;
    color: #333;
}

.form-control:focus,
.form-select:focus {
    border-color: #ff5400;
    box-shadow: 0 0 0 0.2rem rgba(255, 84, 0, 0.1);
}

.form-control::placeholder {
    color: #999;
}

.form-text {
    font-size: 13px;
    color: #666;
}

.access-checkboxes {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
}

.form-check {
    display: flex;
    align-items: center;
}

.form-check-input {
    width: 18px;
    height: 18px;
    margin-right: 8px;
    cursor: pointer;
}

.form-check-input:checked {
    background-color: #ff5400;
    border-color: #ff5400;
}

.form-check-label {
    font-size: 14px;
    color: #333;
    cursor: pointer;
    margin-bottom: 0;
}

.category-tree {
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    padding: 20px;
    background: #fafafa;
}

.category-item {
    margin-bottom: 15px;
}

.category-item:last-child {
    margin-bottom: 0;
}

.category-children {
    margin-top: 10px;
}

.category-children .form-check {
    margin-bottom: 8px;
}

.fw-500 {
    font-weight: 500;
}

.btn-save-availability {
    background-color: #ff5400;
    color: white;
    border: none;
    padding: 12px 24px;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.2s;
}

.btn-save-availability:hover {
    background-color: #e04800;
}

.btn-delete-type {
    background-color: transparent;
    color: #ff5400;
    border: 1px solid #ff5400;
    padding: 12px 24px;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
}

.btn-delete-type:hover {
    background-color: #ff5400;
    color: white;
}

/* Responsive Styles */
@@media (max-width: 768px) {
    .new-service-form-container {
        padding: 20px;
    }

    .access-checkboxes {
        flex-direction: column;
    }

    .form-check.ms-4 {
        margin-left: 0 !important;
    }

    .form-actions {
        flex-direction: column;
    }

    .form-actions .btn {
        width: 100%;
    }
}
</style>
