<!-- Branch Selection View -->
<div id="service-category" class="service-category-view">
    <div class="text-center">
        <h2 class="fs-32 ff-default font-darkgray fw-400 mb-3">Select Appointment</h2>
        <p class="text-muted fs-16" style="text-align: left;">Select a branch.</p>
    </div>
    
    <div class="branch-list">
        <!-- SM Megamall Branch -->
        <div class="branch-item d-flex justify-content-between align-items-center p-4 mb-4 border rounded">
            <div class="text-start">
                <h5 class="mb-0 font-darkgray fs-18">SM Megamall</h5>
            </div>
            <button class="btn btn-fill px-4 py-2" data-branch="SM Megamall" onclick="showServiceCategory(this)">
                Select
            </button>
        </div>
        
        <!-- SM Mall of Asia Branch -->
        <div class="branch-item d-flex justify-content-between align-items-center p-4 mb-4 border rounded">
            <div class="text-start">
                <h5 class="mb-0 font-darkgray fs-18">SM Mall of Asia</h5>
            </div>
            <button class="btn btn-fill px-4 py-2" data-branch="SM Mall of Asia" onclick="showServiceCategory(this)">
                Select
            </button>
        </div>
    </div>
</div>
