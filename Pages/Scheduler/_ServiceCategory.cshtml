<!-- Branch Selection View -->
<div id="service-category" class="service-category-view">
    <div class="text-center">
        <h2 class="fs-32 ff-default font-darkgray fw-400 mb-3" style="margin-top: 1rem;">Select Appointment</h2>
    </div>
    
    <div class="branch-list">
        <!-- SM Megamall Branch -->
        <!-- Desktop Layout -->
        <div class="branch-item d-none d-md-flex justify-content-between align-items-center p-4 mb-4 border rounded">
            <div class="text-start">
                <h5 class="mb-0 font-darkgray fs-18">SM Megamall</h5>
            </div>
            <button class="btn btn-fill px-4 py-2" data-branch="SM Megamall" onclick="showServiceCategory(this)">
                Select
            </button>
        </div>
        <!-- Mobile Layout -->
        <div class="branch-item d-md-none p-4 mb-4 border rounded">
            <div class="text-start mb-3">
                <h5 class="mb-0 font-darkgray fs-18">SM Megamall</h5>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-fill px-5 py-2" data-branch="SM Megamall" onclick="showServiceCategory(this)" style="min-width: 200px;">
                    Select
                </button>
            </div>
        </div>
        
        <!-- SM Mall of Asia Branch -->
        <!-- Desktop Layout -->
        <div class="branch-item d-none d-md-flex justify-content-between align-items-center p-4 mb-4 border rounded">
            <div class="text-start">
                <h5 class="mb-0 font-darkgray fs-18">SM Mall of Asia</h5>
            </div>
            <button class="btn btn-fill px-4 py-2" data-branch="SM Mall of Asia" onclick="showServiceCategory(this)">
                Select
            </button>
        </div>
        <!-- Mobile Layout -->
        <div class="branch-item d-md-none p-4 mb-4 border rounded">
            <div class="text-start mb-3">
                <h5 class="mb-0 font-darkgray fs-18">SM Mall of Asia</h5>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-fill px-5 py-2" data-branch="SM Mall of Asia" onclick="showServiceCategory(this)" style="min-width: 200px;">
                    Select
                </button>
            </div>
        </div>
    </div>
</div>
