<!-- Appointment Selection View -->
<div id="appointment-selection" class="appointment-selection-view" style="display: none;">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <div class="d-flex align-items-center">
            <button class="btn btn-link p-0 me-3 back-link" onclick="showAppointmentList()">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M19 12H5M12 19L5 12L12 5" stroke="#ff5400" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </button>
            <h2 class="fs-32 ff-default font-darkgray fw-400 mb-0">Select Appointment</h2>
        </div>
        <button class="btn btn-history d-none d-md-inline-block">Appointment History</button>
        <button class="btn btn-history-mobile d-md-none" title="Appointment History">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 8V12L15 15M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </button>
    </div>
    <br>
    <div class="selected-appointment-info mb-3">
        <p class="text-muted">Selected: <span id="selected-appointment-name" class="font-darkgray fw-500"></span></p>
        <p class="text-muted" id="selected-appointment-details"></p>
    </div>
    
    <div class="selected-appointment-card">
        <div class="appointment-item d-flex justify-content-between align-items-center p-4 mb-3 border rounded bg-light">
            <div class="text-start">
                <h5 class="mb-2 font-darkgray" id="final-appointment-name">Selected Appointment</h5>
                <p class="mb-1 text-muted" id="final-appointment-fee"></p>
                <p class="mb-0 text-muted" id="final-appointment-duration"></p>
            </div>
            <button class="btn btn-fill px-4 py-2" onclick="showDateTimeSelection()">
                Book Now
            </button>
        </div>
        
        <div class="text-center mt-4">
            <p class="text-muted">Ready to book this appointment? Click "Book Now" to select your preferred date and time.</p>
        </div>
    </div>
</div>
