<!-- Your Information Modal -->
<div class="modal fade" id="informationModal" tabindex="-1" aria-labelledby="informationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body px-4 pt-0">
                <div class="text-center mb-4">
                    <h4 class="modal-title font-darkgray fw-500" id="informationModalLabel">Your Information</h4>
                </div>
                
                <!-- Selected Appointment Info -->
                <div class="appointment-info-card mb-4 p-3 border-start border-4 shadow-sm" style="border-color: #ff5400 !important; background-color: #f9f9f9; border-radius: 6px;">
                    <div class="fs-16 font-darkgray fw-500" id="modal-appointment-name">Consultation</div>
                    <div class="text-muted small" id="modal-appointment-duration">50 minutes &#64; ₱45.00</div>
                    <div class="text-muted small" id="modal-appointment-fee">₱90.00</div>
                </div>
                
                <!-- Medical History Section -->
                <div class="mb-4">
                    <label class="form-label font-darkgray fw-500 mb-2">Medical History</label>
                    <p class="text-muted small mb-3">Please make sure to give correct information because this is important for your check-up</p>
                    <textarea class="form-control shadow-sm" rows="3" placeholder="Enter your medical history..." style="border-radius: 6px;"></textarea>
                </div>
                
                <!-- Questions Section -->
                <div class="mb-4">
                    <label class="form-label font-darkgray fw-500 mb-2">How old are you?</label>
                    <input type="text" class="form-control shadow-sm mb-4" placeholder="Enter your age" style="border-radius: 6px;">
                    
                    <label class="form-label font-darkgray fw-500 mb-2">Do you have any allergies to medications?</label>
                    <textarea class="form-control shadow-sm mb-4" rows="2" placeholder="Please describe any medication allergies..." style="border-radius: 6px;"></textarea>
                    
                    <label class="form-label font-darkgray fw-500 mb-2">Do you have any family history of any conditions?</label>
                    <textarea class="form-control shadow-sm mb-4" rows="2" placeholder="Please describe any family medical history..." style="border-radius: 6px;"></textarea>
                </div>
                
                <!-- Continue Button -->
                <div class="text-center mt-4 mb-3">
                    <button type="button" class="btn px-5 py-2" onclick="submitInformation()" style="background-color: #ff5400; color: white; border-radius: 6px; font-weight: 500; min-width: 150px;">Continue</button>
                </div>
            </div>
        </div>
    </div>
</div>
