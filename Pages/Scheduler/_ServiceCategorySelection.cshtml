<!-- Service Category Selection View -->
<div id="service-category-selection" class="service-category-selection-view display-none">
    <!-- Desktop Header -->
    <div class="d-none d-md-flex align-items-center mb-4 position-relative">
        <button class="btn btn-link p-0 back-link text-decoration-none" onclick="showBranchSelection()">
            <i class="bi bi-chevron-left"></i>
            <span class="text-orange fs-14">Back</span>
        </button>
        <h2 class="fs-32 ff-default font-darkgray fw-400 position-absolute start-50 translate-middle-x scheduler-title-desktop">Select Appointment</h2>
    </div>

    <!-- Mobile Header -->
    <div class="d-md-none">
        <div class="d-flex align-items-center justify-content-center mb-3 position-relative mobile-header-container">
            <button class="btn btn-link p-0 back-link text-decoration-none position-absolute start-0" onclick="showBranchSelection()">
                <i class="bi bi-chevron-left mobile-back-chevron"></i>
            </button>
            <h2 class="fs-32 ff-default font-darkgray fw-400 mb-0">Service Category</h2>
        </div>
       
    </div>
    
    <div class="service-list">
        <!-- Hair Service -->
        <!-- Desktop Layout -->
        <div class="service-item d-none d-md-flex justify-content-between align-items-center p-4 mb-4 border rounded">
            <div class="text-start">
                <h5 class="mb-0 font-darkgray fs-18">Hair</h5>
            </div>
            <button class="btn btn-fill px-4 py-2" data-service="Hair" onclick="showAppointmentDetails(this)">
                Select
            </button>
        </div>
        <!-- Mobile Layout -->
        <div class="service-item d-md-none p-4 mb-4 border rounded">
            <div class="text-start mb-3">
                <h5 class="mb-0 font-darkgray fs-18">Hair</h5>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-fill px-5 py-2 service-item-btn" data-service="Hair" onclick="showAppointmentDetails(this)">
                    Select
                </button>
            </div>
        </div>
        
        <!-- Feet Service -->
        <!-- Desktop Layout -->
        <div class="service-item d-none d-md-flex justify-content-between align-items-center p-4 mb-4 border rounded">
            <div class="text-start">
                <h5 class="mb-0 font-darkgray fs-18">Feet</h5>
            </div>
            <button class="btn btn-fill px-4 py-2" data-service="Feet" onclick="showAppointmentDetails(this)">
                Select
            </button>
        </div>
        <!-- Mobile Layout -->
        <div class="service-item d-md-none p-4 mb-4 border rounded">
            <div class="text-start mb-3">
                <h5 class="mb-0 font-darkgray fs-18">Feet</h5>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-fill px-5 py-2 service-item-btn" data-service="Feet" onclick="showAppointmentDetails(this)">
                    Select
                </button>
            </div>
        </div>

        <!-- Face Service -->
        <!-- Desktop Layout -->
        <div class="service-item d-none d-md-flex justify-content-between align-items-center p-4 mb-4 border rounded">
            <div class="text-start">
                <h5 class="mb-0 font-darkgray fs-18">Face</h5>
            </div>
            <button class="btn btn-fill px-4 py-2" data-service="Face" onclick="showAppointmentDetails(this)">
                Select
            </button>
        </div>
        <!-- Mobile Layout -->
        <div class="service-item d-md-none p-4 mb-4 border rounded">
            <div class="text-start mb-3">
                <h5 class="mb-0 font-darkgray fs-18">Face</h5>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-fill px-5 py-2 service-item-btn" data-service="Face" onclick="showAppointmentDetails(this)">
                    Select
                </button>
            </div>
        </div>
    </div>
    
    <!-- Bottom Cart Section -->
    <div id="cart-section" class="cart-section display-none">
        <div class="cart-content d-flex justify-content-between align-items-center">
            <div class="d-none d-md-block me-3 text-end">
                <div class="cart-text">Items: <span id="cart-count">1</span></div>
                <div class="cart-total-text">Total: <span id="cart-total">560.00</span></div>
            </div>
            <!-- Desktop version -->
            <div class="d-none d-md-flex justify-content-end align-items-center">
                <button class="btn btn-proceed" onclick="proceedToCheckout()">
                    Proceed <i class="bi bi-chevron-right"></i>
                </button>
            </div>
            <!-- Mobile version (full width) -->
            <div class="d-md-none w-100">
                <div class="d-flex justify-content-between mb-2">
                    <div class="cart-text">Items: <span id="cart-count-mobile">1</span></div>
                    <div class="cart-total-text">Total: Php<span id="cart-total-mobile">560.00</span></div>
                </div>
                <button class="btn btn-proceed w-100" onclick="proceedToCheckout()">
                    Proceed
                </button>
            </div>
        </div>
    </div>
</div>
