<!-- Service Category Selection View -->
<div id="service-category-selection" class="service-category-selection-view" style="display: none;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <button class="btn btn-link p-0 back-link text-decoration-none" onclick="showBranchSelection()">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="me-1">
                <path d="M19 12H5M12 19L5 12L12 5" stroke="#ff5400" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span class="text-orange fs-14">Branches</span>
        </button>
        <h2 class="fs-32 ff-default font-darkgray fw-400 mb-0">Select Appointment</h2>
        <div></div>
    </div>
    
    <div class="service-list">
        <!-- Hair Service -->
        <div class="service-item d-flex justify-content-between align-items-center p-4 mb-4 border rounded">
            <div class="text-start">
                <h5 class="mb-0 font-darkgray fs-18">Hair</h5>
            </div>
            <button class="btn btn-fill px-4 py-2" data-service="Hair" onclick="showAppointmentList(this)">
                Select
            </button>
        </div>
        
        <!-- Feet Service -->
        <div class="service-item d-flex justify-content-between align-items-center p-4 mb-4 border rounded">
            <div class="text-start">
                <h5 class="mb-0 font-darkgray fs-18">Feet</h5>
            </div>
            <button class="btn btn-fill px-4 py-2" data-service="Feet" onclick="showAppointmentList(this)">
                Select
            </button>
        </div>

        <!-- Face Service -->
        <div class="service-item d-flex justify-content-between align-items-center p-4 mb-4 border rounded">
            <div class="text-start">
                <h5 class="mb-0 font-darkgray fs-18">Face</h5>
            </div>
            <button class="btn btn-fill px-4 py-2" data-service="Face" onclick="showAppointmentList(this)">
                Select
            </button>
        </div>
    </div>
</div>
