<!-- Service Category Selection View -->
<div id="service-category-selection" class="service-category-selection-view" style="display: none;">
    <!-- Desktop Header -->
    <div class="d-none d-md-flex align-items-center mb-4 position-relative">
        <button class="btn btn-link p-0 back-link text-decoration-none" onclick="showBranchSelection()">
            <i class="bi bi-chevron-left"></i>
            <span class="text-orange fs-14">Back</span>
        </button>
        <h2 class="fs-32 ff-default font-darkgray fw-400 position-absolute start-50 translate-middle-x" style="margin-bottom: 2.9rem;">Select Appointment</h2>
    </div>

    <!-- Mobile Header -->
    <div class="d-md-none">
        <div class="d-flex align-items-center justify-content-center mb-3 position-relative" style="margin-top: 0.8rem;">
            <button class="btn btn-link p-0 back-link text-decoration-none position-absolute start-0" onclick="showBranchSelection()" style="margin-bottom: 0;">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M19 12H5M12 19L5 12L12 5" stroke="#ff5400" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </button>
            <h2 class="fs-32 ff-default font-darkgray fw-400 mb-0">Service Category</h2>
        </div>
        <p class="text-muted fs-16 mb-4" style="text-align: left;">Select a category.</p>
    </div>
    
    <div class="service-list">
        <!-- Hair Service -->
        <!-- Desktop Layout -->
        <div class="service-item d-none d-md-flex justify-content-between align-items-center p-4 mb-4 border rounded">
            <div class="text-start">
                <h5 class="mb-0 font-darkgray fs-18">Hair</h5>
            </div>
            <button class="btn btn-fill px-4 py-2" data-service="Hair" onclick="showAppointmentDetails(this)">
                Select
            </button>
        </div>
        <!-- Mobile Layout -->
        <div class="service-item d-md-none p-4 mb-4 border rounded">
            <div class="text-start mb-3">
                <h5 class="mb-0 font-darkgray fs-18">Hair</h5>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-fill px-5 py-2" data-service="Hair" onclick="showAppointmentDetails(this)" style="min-width: 200px;">
                    Select
                </button>
            </div>
        </div>
        
        <!-- Feet Service -->
        <!-- Desktop Layout -->
        <div class="service-item d-none d-md-flex justify-content-between align-items-center p-4 mb-4 border rounded">
            <div class="text-start">
                <h5 class="mb-0 font-darkgray fs-18">Feet</h5>
            </div>
            <button class="btn btn-fill px-4 py-2" data-service="Feet" onclick="showAppointmentDetails(this)">
                Select
            </button>
        </div>
        <!-- Mobile Layout -->
        <div class="service-item d-md-none p-4 mb-4 border rounded">
            <div class="text-start mb-3">
                <h5 class="mb-0 font-darkgray fs-18">Feet</h5>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-fill px-5 py-2" data-service="Feet" onclick="showAppointmentDetails(this)" style="min-width: 200px;">
                    Select
                </button>
            </div>
        </div>

        <!-- Face Service -->
        <!-- Desktop Layout -->
        <div class="service-item d-none d-md-flex justify-content-between align-items-center p-4 mb-4 border rounded">
            <div class="text-start">
                <h5 class="mb-0 font-darkgray fs-18">Face</h5>
            </div>
            <button class="btn btn-fill px-4 py-2" data-service="Face" onclick="showAppointmentDetails(this)">
                Select
            </button>
        </div>
        <!-- Mobile Layout -->
        <div class="service-item d-md-none p-4 mb-4 border rounded">
            <div class="text-start mb-3">
                <h5 class="mb-0 font-darkgray fs-18">Face</h5>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-fill px-5 py-2" data-service="Face" onclick="showAppointmentDetails(this)" style="min-width: 200px;">
                    Select
                </button>
            </div>
        </div>
    </div>
</div>
