<!-- Appointment Details View -->
<div id="appointment-details" class="appointment-details-view" style="display: none;">
    <!-- Desktop Header -->
    <div class="d-none d-md-flex align-items-center mb-4 position-relative">
        <button class="btn btn-link p-0 back-link text-decoration-none" onclick="showServiceCategorySelection()">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="me-1">
                <path d="M19 12H5M12 19L5 12L12 5" stroke="#ff5400" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span class="text-orange fs-14">Service Category</span>
        </button>
        <h2 class="fs-32 ff-default font-darkgray fw-400 position-absolute start-50 translate-middle-x" style="margin-bottom: 2.9rem;">Select Appointment</h2>
    </div>

    <!-- Mobile Header -->
    <div class="d-md-none">
        <div class="d-flex align-items-center justify-content-center mb-3 position-relative" style="margin-top: 0.8rem;">
            <button class="btn btn-link p-0 back-link text-decoration-none position-absolute start-0" onclick="showServiceCategorySelection()" style="margin-bottom: 0;">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M19 12H5M12 19L5 12L12 5" stroke="#ff5400" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </button>
            <h2 class="fs-32 ff-default font-darkgray fw-400 mb-0">Select Appointment</h2>
        </div>
        <p class="text-muted fs-16 mb-4" style="text-align: left;">Select an appointment.</p>
    </div>
    
    <div class="appointment-details-list">
        <!-- Hot Oil Appointment -->
        <!-- Desktop Layout -->
        <div class="appointment-item d-none d-md-flex justify-content-between align-items-center p-4 mb-4 border rounded">
            <div class="text-start">
                <h5 class="mb-1 font-darkgray fs-18">Hot Oil</h5>
                <p class="mb-1 text-muted fs-14">Reservation Fee: ₱30.00</p>
                <p class="mb-0 text-muted fs-14">50 minutes &#64; ₱45.00</p>
            </div>
            <button class="btn btn-fill px-4 py-2" data-appointment="Hot Oil" data-fee="₱30.00" data-duration="50 minutes &#64; ₱45.00" onclick="selectAppointmentDetails(this)">
                Book
            </button>
        </div>
        <!-- Mobile Layout -->
        <div class="appointment-item d-md-none p-4 mb-4 border rounded">
            <div class="text-start mb-3">
                <h5 class="mb-1 font-darkgray fs-18">Hot Oil</h5>
                <p class="mb-1 text-muted fs-14">Reservation Fee: ₱30.00</p>
                <p class="mb-0 text-muted fs-14">50 minutes &#64; ₱45.00</p>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-fill px-5 py-2" data-appointment="Hot Oil" data-fee="₱30.00" data-duration="50 minutes &#64; ₱45.00" onclick="selectAppointmentDetails(this)" style="min-width: 200px;">
                    Book
                </button>
            </div>
        </div>
        
        <!-- Hair Rebond Appointment -->
        <!-- Desktop Layout -->
        <div class="appointment-item d-none d-md-flex justify-content-between align-items-center p-4 mb-4 border rounded">
            <div class="text-start">
                <h5 class="mb-1 font-darkgray fs-18">Hair Rebond</h5>
                <p class="mb-0 text-muted fs-14">1 hour/s</p>
            </div>
            <button class="btn btn-fill px-4 py-2" data-appointment="Hair Rebond" data-fee="" data-duration="1 hour/s" onclick="selectAppointmentDetails(this)">
                Book
            </button>
        </div>
        <!-- Mobile Layout -->
        <div class="appointment-item d-md-none p-4 mb-4 border rounded">
            <div class="text-start mb-3">
                <h5 class="mb-1 font-darkgray fs-18">Hair Rebond</h5>
                <p class="mb-0 text-muted fs-14">1 hour/s</p>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-fill px-5 py-2" data-appointment="Hair Rebond" data-fee="" data-duration="1 hour/s" onclick="selectAppointmentDetails(this)" style="min-width: 200px;">
                    Book
                </button>
            </div>
        </div>
    </div>
</div>
