<!-- Your Information View -->
<div id="information-view" class="information-view">
    <div class="d-flex justify-content-center align-items-center mb-1 position-relative">
        <a class="position-absolute start-0 d-flex align-items-center text-decoration-none back-link" onclick="showDateTimeView()">
            <i class="bi bi-chevron-left me-1"></i>
            <span class="d-none d-md-inline">Date & Time</span>
        </a>
        <h4 class="mb-0 fw-bold">Your Information</h4>
    </div>
    
    <!-- Selected Appointment Info -->
    <div class="selected-appointment-info mb-3 p-3 bg-white border rounded">
        <div class="text-muted info-item">Company Name</div>
        <div class="fs-18 font-darkgray fw-500 info-item" id="info-appointment-name">Consultation</div>
        <div class="text-muted info-item" id="info-appointment-details">50 minutes &#64; ₱45.00</div>
        <div class="text-muted info-item" id="info-appointment-fee">Reservation Fee: ₱90.00</div>
    </div>
    

    <!-- Medical History Form -->
    <div class="medical-history-section">
        <h5 class="medical-history-title">Medical History</h5>
        <p class="form-label fw-500 text-muted">Please make sure to give correct information because this is important for your check-up.</p>
        
        <div class="mb-3">
            <label class="form-label fw-500">How old are you?</label>
            <input type="number" class="form-control compact-input" id="age" placeholder="" min="1" max="99" maxlength="2" oninput="validateAge(this)">
        </div>
        
        <div class="mb-3">
            <label class="form-label fw-500">Do you have any allergies to medications?</label>
            <input type="text" class="form-control compact-input" id="allergies" placeholder="">
        </div>
        
        <div class="mb-3">
            <label class="form-label fw-500">Do you have any family history of any conditions?</label>
            <input type="text" class="form-control compact-input" id="family-history" placeholder="">
        </div>

            <br>
        
        <div class="continue-button-container">
            <button type="button" class="btn btn-primary py-3 continue-button" onclick="submitInformation()">
                Continue
            </button>
        </div>
    </div>
</div>
