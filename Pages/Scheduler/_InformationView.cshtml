<!-- Your Information View -->
<div id="information-view" class="information-view" style="display: none; margin-top: -30px;">
    <div class="d-flex justify-content-center align-items-center mb-1 position-relative">
        <a class="position-absolute start-0 d-flex align-items-center text-decoration-none" onclick="showDateTimeView()" style="color: #ff5400; cursor: pointer; margin-left: 3rem">
            <i class="bi bi-chevron-left me-1"></i>
            <span class="d-none d-md-inline">Date & Time</span>
        </a>
        <h4 class="mb-0 fw-bold">Your Information</h4>
    </div>

    <!-- Selected Appointment Info -->
    <div class="selected-appointment-info mb-3 p-3 bg-white border rounded" style="margin-left: 3rem; margin-right: 3rem; margin-top: 2rem;">
        <div class="text-muted" style="margin-left: 1rem;">Company Name</div>
        <div class="fs-18 font-darkgray fw-500" id="info-appointment-name" style="margin-left: 1rem;">Consultation</div>
        <div class="text-muted" id="info-appointment-details" style="margin-left: 1rem;">50 minutes &#64; ₱45.00</div>
        <div class="text-muted" id="info-appointment-fee" style="margin-left: 1rem;">Reservation Fee: ₱90.00</div>
    </div>
    

    <!-- Medical History Form -->
    <div class="medical-history-section" style="max-height: 500px; overflow-y: auto;">
        <h5 style="color: black;">Medical History</h5>
        <p style="color: black;">Please make sure to give correct information because this is important for your check-up.</p>
        
        <div class="mb-3">
            <label class="form-label fw-500">How old are you?</label>
            <input type="number" class="form-control compact-input" id="age" placeholder="" min="1" max="99" maxlength="2" oninput="validateAge(this)">
        </div>
        
        <div class="mb-3">
            <label class="form-label fw-500">Do you have any allergies to medications?</label>
            <input type="text" class="form-control compact-input" id="allergies" placeholder="">
        </div>
        
        <div class="mb-3">
            <label class="form-label fw-500">Do you have any family history of any conditions?</label>
            <input type="text" class="form-control compact-input" id="family-history" placeholder="">
        </div>

            <br>
        
        <div style="display: flex; justify-content: left;">
            <button type="button" class="btn btn-primary py-3" style="background-color: #ff5400; border-color: #ff5400; font-size: 16px; font-weight: 500; width: 400px;" onclick="submitInformation()">
                Continue
            </button>
        </div>
    </div>
</div>
