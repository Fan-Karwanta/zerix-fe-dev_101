                <div
                    class="d-flex flex-column justify-content-start align-items-start w-auto my-4 py-4 gap-2 archive-department">
                    <span>Automatic Archive</span>
                    <form class="d-flex">
                        <div class="input-group me-1">
                            <select name="sources" id="sources" class="custom-select wide logs sources fs-14"
                                placeholder="Choose Department">
                                <option value="1">Everyday</option>
                                <option value="2">Every week</option>
                                <option value="3">Every month</option>
                                <option value="3">Every 60 days</option>
                            </select>
                        </div>
                    </form>
                    <button
                        class="my-3 align-self-end add-template btn btn-fill d-flex flex-row justify-content-center align-items-center fs-14 me-1">
                        <span>Save Changes</span>
                    </button>
                </div>
