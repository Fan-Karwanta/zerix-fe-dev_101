<div class="container px-4 my-2 pt-md-4 pt-2 d-flex flex-column archive">
    <div class="d-none d-md-flex justify-content-between">
        <div class="fs-24 color-495057 min-h-title">ARCHIVE</div>
        <div class="d-flex gap-4">
        </div>
    </div>
    <!-- Mobile View -->
    <div class="d-flex d-md-none flex-column gap-3 mb-2">
        <div class="d-flex justify-content-between align-items-center">
            <div class="text-start fs-18 color-495057 my-2">ARCHIVE</div>
        </div>
    </div>

    <div class=" row justify-content-center align-items-center text-center">
        <div class="d-sm-block d-none col-12 col-sm-7 justify-content-center align-items-center">
