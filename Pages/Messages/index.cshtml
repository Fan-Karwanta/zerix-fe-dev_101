<script>
    function initializeSearch(inputId, controlsId, prevBtnId, nextBtnId, containerClass) {
        const searchInput = document.getElementById(inputId);
        const searchControls = document.getElementById(controlsId);
        const prevBtn = document.getElementById(prevBtnId);
        const nextBtn = document.getElementById(nextBtnId);
        const searchCount = searchControls.querySelector('.search-count');
        const chatContainer = document.querySelector(containerClass);

        let currentIndex = -1;
        let searchResults = [];
        let searchTimeout;

        function performSearch() {
            const query = searchInput.value.trim();
            clearHighlights();
            if (query === '') {
                searchControls.classList.add('d-none');
                return;
            }


            // Specifically target message bubbles - looking for the actual message content divs
            // This targets the message content divs directly for better precision
            const messages = chatContainer.querySelectorAll('.message .message-text-content');

            console.log(`Found ${messages.length} message elements in ${containerClass}`);

            searchResults = [];
            currentIndex = -1;

            // Track elements by their content to avoid duplicates
            const uniqueContents = new Set();

            messages.forEach((message, index) => {
                const text = message.innerHTML;
                const lowerText = message.textContent.toLowerCase().trim();
                const lowerQuery = query.toLowerCase();

                console.log(`Message ${index} content: "${lowerText.substring(0, 30)}..."`, lowerText.length);

                // Skip empty messages or those with just whitespace
                if (lowerText.length === 0) {
                    console.log(`Skipping empty message ${index}`);
                    return;
                }

                // Check if message contains the search query
                if (lowerText.includes(lowerQuery)) {
                    // Only add if we haven't seen this exact content before
                    if (!uniqueContents.has(lowerText)) {
                        uniqueContents.add(lowerText);
                        searchResults.push({
                            element: message,
                            originalContent: text,
                            text: lowerText,
                            query: lowerQuery
                        });
                        console.log(`Added result ${searchResults.length}: "${lowerText.substring(0, 30)}..."`);
                    } else {
                        console.log(`Skipped duplicate: "${lowerText.substring(0, 30)}..."`);
                    }
                }
            });

            console.log(`Total unique results: ${searchResults.length}`);

            // Always show search controls when a search is performed
            searchControls.classList.remove('d-none');

            if (searchResults.length > 0) {
                searchCount.textContent = `1/${searchResults.length}`;
                navigateToResult(0);
            } else {
                // Show "0/0" when no results are found
                searchCount.textContent = `0/0`;
            }
        }

        function clearHighlights() {
            // Restore original content for all search results
            searchResults.forEach(result => {
                result.element.innerHTML = result.originalContent;
            });
        }

        function highlightText(index) {
            if (!searchResults[index]) return;

            const result = searchResults[index];
            const text = result.originalContent;
            const query = result.query;

            // Create a case-insensitive regular expression for the query
            const regex = new RegExp(`(${escapeRegExp(query)})`, 'gi');

            // Replace matches with highlighted version
            result.element.innerHTML = text.replace(regex, '<span class="highlight">$1</span>');
        }

        function escapeRegExp(string) {
            return string.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
        }

        function navigateToResult(index) {
            if (searchResults.length === 0) return;

            // Clear all highlights
            clearHighlights();

            currentIndex = index;
            if (currentIndex >= searchResults.length) currentIndex = 0;
            if (currentIndex < 0) currentIndex = searchResults.length - 1;

            // Highlight the query text in the current result
            highlightText(currentIndex);

            searchCount.textContent = `${currentIndex + 1}/${searchResults.length}`;

            // Scroll to the result
            searchResults[currentIndex].element.scrollIntoView({
                behavior: 'smooth',
                block: 'center'
            });
        }

        // Event listeners
        searchInput.addEventListener('input', () => {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(performSearch, 300);

            // Immediately hide controls if input is empty
            if (searchInput.value.trim() === '') {
                searchControls.classList.add('d-none');
            }

            // Immediately hide controls if input is empty
            if (searchInput.value.trim() === '') {
                searchControls.classList.add('d-none');
            }
        });

        prevBtn.addEventListener('click', () => navigateToResult(currentIndex - 1));
        nextBtn.addEventListener('click', () => navigateToResult(currentIndex + 1));
    }

    // Initialize search for both desktop and mobile
    document.addEventListener('DOMContentLoaded', () => {
        // Use existing CSS class from stylesheet instead of creating a new one
        initializeSearch(
            'desktopSearchInput',
            'desktopSearchControls',
            'prevResult',
            'nextResult',
            '.chat-content.desktop'
        );

        initializeSearch(
            'mobileSearchInput',
            'mobileSearchControls',
            'prevResultMobile',
            'nextResultMobile',
            '.chat-content.mobile'
        );
    });
</script>