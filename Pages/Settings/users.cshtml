        document.getElementById('backToGroupsBtn').addEventListener('click', function (e) {
            e.preventDefault();
            // Hide the add group section
            document.getElementById('addUserContactSection').classList.add('d-none');
            // Show the user groups section
            document.getElementById('usersSettingsSection').classList.remove('d-none');
        });

        document.getElementById('closeContactGroupBtn').addEventListener('click', function (e) {
            e.preventDefault();
            document.getElementById('addUserContactSection').classList.add('d-none');
            document.getElementById('usersSettingsSection').classList.remove('d-none');

        });
    });
</script>