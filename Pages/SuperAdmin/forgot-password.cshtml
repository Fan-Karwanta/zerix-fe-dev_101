@page
@model ForgotPasswordModel
@{
    Layout = "SuperAdmin/_Layout";
    ViewData["Title"] = "Forgot Password";
}

<div class="container-fluid px-0">
    <div class="min-vh-100 d-flex flex-row justify-content-center align-items-start align-items-md-center">
        <!-- Login Form Section -->
        <div class="d-flex flex-column justify-content-start justify-content-md-center align-items-center">
            <div
                class="d-flex justify-content-md-center justify-content-center login-contents width my-4 pt-4 mt-md-0 pt-md-0 pb-md-4">
                <img src="/images/new-zerix-logo.svg" alt="ZerixText" class="logo-img">
            </div>
            <div
                class="card border-0 ud-shadow bg-color-white flex-column justify-content-md-center justify-content-center align-items-center forgot-password container px-0">
                <form
                    class="card-body bg-color-fff w-100 d-flex flex-column justify-content-md-center justify-content-start px-0"
                    id="forgotPasswordForm">
                    <div class="d-flex flex-column justify-content-center align-items-center gap-3 my-4">
                        <div class="section">
                            <div class="text-start width welcome-text mb-1 fs-24">Forgot Password</div>
                            <div class="sub-text mb-3 color-878A99 fs-15">Enter the email associated with your account to change your password.
                            </div>
                        </div>
                        <div class="mb-3 section">
                            <label for="email" class="form-label fs-15">Enter your Email</label>
                            <div class="input-group">
                                <input type="email" class="form-control fs-15" id="email" name="email" required>
                            </div>
                            <span class="d-none font-red">Invalid Email</span>
                        </div>
                        <button type="submit"
                            class="section bg-color-ff5400 log-in-btn py-2 fs-15">Next</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('forgotPasswordForm');
        if (form) {
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                window.location.href = '/superadmin/password-reset-code';
            });
        }
    });
</script>
