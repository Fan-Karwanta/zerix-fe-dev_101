<div class="container my-4 px-4 d-flex flex-column gap-md-3">
    <!-- Back Arrow and Title -->
    <div class="d-flex justify-content-start align-items-center mt-2 mb-4">
        <div class="d-none d-md-block my-2 fs-24 color-495057 ">MAIL SERVER CONFIGURATION</div>
        <div class="d-block d-md-none my-2 fs-20 color-495057 ">MAIL SERVER CONFIGURATION</div>
    </div>

    <div class="msc border rounded align-self-center mb-4">
        <form class="d-flex flex-column mx-0 my-3 p-3 mx-md-2 my-md-2 p-md-4">
            <div class="row mb-3 justify-content-center align-items-center px-4">
                <div class="col-md-6">
                    <div class="mt-3">
                        <label for="mail-server" class="form-label">Mail Server</label>
                        <textarea class="form-control rounded" id="mail-server" rows="4"></textarea>
                    </div>
                    <div class="form-check my-2">
                        <input class="form-check-input" type="checkbox" id="ssl-enabled">
                        <label class="form-check-label fs-14" for="ssl-enabled">Enable SSL</label>
                    </div>
                    <div class="my-4">
                        <label for="port" class="form-label">Port</label>
                        <textarea class="form-control rounded" id="port" rows="4"></textarea>
                    </div>
                    <div class="my-4">
                        <label for="User" class="form-label">User</label>
                        <textarea class="form-control rounded" id="User" rows="4"></textarea>
                    </div>
                </div>
                <div class="col-md-6  align-self-start d-flex flex-column gap-md-3 gap-0">
                    <div class="my-3">
                        <label for="password" class="form-label">Password</label>
                        <div class="input-group">
                            <input type="password" class="form-control password" id="password">
                            <button class="btn btn-show-password" type="button" id="togglePassword"
                                onclick="togglePasswordVisibility('togglePassword', 'password')">
                                <i class="bi bi-eye color-878A99"></i>
                            </button>
                        </div>
                    </div>
                    <div class="my-4">
                        <label for="password" class="form-label">Confirm Password</label>
                        <div class="input-group">
                            <input type="password" class="form-control password" id="confirmPassword">
                            <button class="btn btn-show-password" type="button" id="toggleConfirmPassword"
                                onclick="togglePasswordVisibility('toggleConfirmPassword', 'confirmPassword')">
                                <i class=" bi bi-eye color-878A99"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="align-self-center my-2">
                <button type="submit" class="btn btn-fill">Test Email Settings</button>
            </div>
        </form>
    </div>
</div>